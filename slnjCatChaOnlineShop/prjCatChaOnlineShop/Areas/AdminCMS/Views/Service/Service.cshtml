@{
    ViewData["Title"] = "Service";
    Layout = "~/Areas/AdminCMS/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{

}

<div class="middle-content">

    <h2 class="mt-3">客服回覆管理</h2>


    <div class="search-row row mt-3 mb-3">
        <div class="row align-items-center mb-3">
            申訴類別：
            <select class="form-select w-25" id="payList">
                <option value="" selected>全部訂單</option>
                <option>運送問題</option>
                <option>產品問題</option>
                <option>付款問題</option>
                <option>會員權益</option>
                <option>購物諮詢</option>
                <option>遊戲檢舉</option>
                <option>隱私保護</option>
                <option>獎勵活動</option>
                <option>其它事項</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            狀態篩選：
            <select class="form-select w-25" id="deliveryList">
                <option value="" selected>全部訂單</option>
                <option>待處理</option>
                <option>已解決</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            關鍵字搜尋：
            <input type="text" class="form-control" style="width:25%;" />
        </div>

        <button type="button" class="keyword_input col-xl-1">查詢</button>
    </div>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="service-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>回覆ID</th>
                            <th>客訴案件ID</th>
                            <th>申訴類別</th>
                            <th>接收者ID(官方)</th>
                            <th>發送時間</th>
                            <th>建立時間</th>
                            <th>會員ID</th>
                            <th>狀態</th>
                            <th>詳細資料</th>
                            <th>編輯/刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>1</td>
                            <td>001</td>
                            <td>付款問題</td>
                            <td>管理員1</td>
                            <td>2023/08/03 13:32:05</td>
                            <td>2023/08/02 14:44:06</td>
                            <td>82</td>
                            <td>待處理</td>
                            <td>
                                <button class="detail_input" data-bs-toggle="modal"
                                        href="#exampleModalToggle" role="button">
                                    詳細資料
                                </button>
                            </td>
                            <td>
                                <button class="btn" data-bs-toggle="modal"
                                        href="#editModalToggle" role="button">
                                    <i class="fas fa-edit"></i>
                                </button>｜
                                <button class="btn" onclick="userDelete()">
                                    <a href="#" id="b5">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!--表格-->
                <!--編輯彈出視窗-->
                <div class="modal fade" id="editModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active"
                                         id="member-edit-nav-home">
                                        <form>

                                            <div class="form-group">
                                                <label class="form-label">申訴標題	Complaint Title：</label>
                                                <input class="form-control" type="text" value="請問線上付款的步驟說明?" readonly disabled />
                                            </div>

                                            <div class="form-group">
                                                <label class="form-label">申訴類別：</label>
                                                <select class="form-control">
                                                    <option>運送問題</option>
                                                    <option>產品問題</option>
                                                    <option>付款問題</option>
                                                    <option>會員權益</option>
                                                    <option>購物諮詢</option>
                                                    <option>遊戲檢舉</option>
                                                    <option>隱私保護</option>
                                                    <option>獎勵活動</option>
                                                    <option>其它事項</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label class="form-label">回覆ID　Reply ID：</label>
                                                <input class="form-control" type="text" readonly disabled />
                                            </div>

                                            <div class="form-group">
                                                <label class="form-label">客訴案件ID　Complaint Case ID</label>
                                                <input class="form-control" type="text" readonly disabled />
                                            </div>

                                            <div class="form-group">
                                                <label class="form-label">接收者ID(官方)	　Receiver ID (Official)：</label>
                                                <select class="form-control">
                                                    <option>管理員1</option>
                                                    <option>管理員2</option>
                                                    <option>管理員3</option>
                                                </select>
                                            </div>

                                            <div class="form-group">
                                                <label for="w3review">問題內容：</label>
                                                <textarea class="form-control" id="w3review"
                                                          name="w3review" rows="4" cols="50" readonly
                                                          disabled>我無法使用線上付款，能協助我提供操作步驟嗎?
                                                                    </textarea>
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleFormControlTextarea1"
                                                       class="form-label">回覆：</label>
                                                <textarea class="form-control"
                                                          id="exampleFormControlTextarea1"
                                                          rows="3"></textarea>
                                            </div>

                                            <div class="form-group">
                                                <label for="exampleFormControlTextarea1"
                                                       class="form-label">狀態：</label>
                                                <select class="form-control">
                                                    <option>待處理</option>
                                                    <option>已解決</option>
                                                </select>
                                            </div>

                                            <button class="btn btn-danger btn-block mt-4"
                                                    style="width: 100%;">
                                                儲存
                                            </button>
                                        </form>
                                    </div>
                                    <div class="tab-pane fade" id="member-edit-nav-paper">
                                        <p>顯示優惠券 | <button>刪除</button></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--編輯彈出視窗-->
                <!---詳細資料model-->
                <div class="modal fade" id="exampleModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title bg-dark text-white" id="exampleModalToggleLabel">
                                    其他資訊
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-home-tab"
                                                data-bs-toggle="tab" data-bs-target="#nav-home" type="button"
                                                role="tab">
                                            會員資料
                                        </button>
                                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab"
                                                data-bs-target="#nav-profile" type="button"
                                                role="tab">
                                            詳細資料
                                        </button>
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                         aria-labelledby="nav-home-tab">
                                        <p>ID</p>
                                        <p>姓名：</p>
                                        <p>帳號：</p>
                                        <p>性別：</p>
                                        <p>生日：</p>
                                        <p>E-mail：</p>
                                        <p>電話：</p>
                                        <p>地址：</p>
                                        <p>註冊日期：</p>
                                        <p>最後登入：</p>
                                        <p>會員狀態：</p>
                                    </div>
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel">
                                        <p>申訴標題	Complaint Title：請問線上付款的步驟說明?</p>
                                        <p>申訴類別ID	Complaint Category ID：付款問題</p>
                                        <p>
                                            客訴內容：
                                            <textarea class="form-control" id="w3review" name="w3review" rows="4" cols="50" readonly disabled>我無法使用線上付款，能協助我提供操作步驟嗎?</textarea>
                                        </p>
                                        <p>
                                            訊息(接收者)內容　 Message (Recipient) Content：
                                            <textarea class="form-control" id="w3review" name="w3review" rows="4" cols="50" readonly disabled>已將操作步驟發送至郵件，請查看收件匣</textarea>
                                        </p>
                                        <p> 回覆ID　Reply ID：</p>
                                        <p>客訴案件ID　Complaint Case ID</p>
                                        <p>接收者ID(官方)	　Receiver ID (Official) - </p>
                                        <p>發送時間	Sent Time</p>
                                        <p>客訴狀態ID：35835303</p>
                                        <p>客訴案件ID：_______(此欄待確認)</p>
                                        <p>建立時間：2023/08/16 </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->
                @section Scripts{
                    <script>
                        new DataTable('#service-table', {
                            responsive: true,
                            "searching": false, //隱藏搜尋框

                            //========隱藏某一欄
                            // columnDefs: [
                            // {
                            //     target: 10,
                            //     visible: false,
                            //     searchable: false
                            // },
                            // {
                            //     target: 11,
                            //     visible: false
                            // }
                            // ]
                        });

                        function userDelete() {
                            Swal.fire({
                                title: '確定要刪除嗎?',
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, delete it!'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    Swal.fire(
                                        'Deleted!',
                                        'Your file has been deleted.',
                                        'success'
                                    )
                                }
                            })
                        }
                    </script>
                }
