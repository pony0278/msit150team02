@{
    ViewData["Title"] = "Return";
    Layout = "~/Areas/AdminCMS/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{
    <style>
        /*產品明細表格RWD*/
        .rwd-table {
            background: #fff;
            overflow: hidden;
        }

            .rwd-table tr:nth-of-type(2n) {
                background: #eee;
            }

            .rwd-table th,
            .rwd-table td {
                margin: 0.5em 1em;
            }

        .rwd-table {
            min-width: 100%;
        }

            .rwd-table th {
                display: none;
            }

            .rwd-table td {
                display: block;
            }

                .rwd-table td:before {
                    content: attr(data-th) " : ";
                    font-weight: bold;
                    width: 6.5em;
                    display: inline-block;
                }

            .rwd-table th, .rwd-table td {
                text-align: left;
            }

                .rwd-table th, .rwd-table td:before {
                    color: #b95756;
                    font-weight: bold;
                }

        @@media (min-width: 480px) {
            .rwd-table td:before {
                display: none;
            }

            .rwd-table th, .rwd-table td {
                display: table-cell;
                padding: 0.25em 0.5em;
            }

                .rwd-table th:first-child,
                .rwd-table td:first-child {
                    padding-left: 0;
                }

                .rwd-table th:last-child,
                .rwd-table td:last-child {
                    padding-right: 0;
                }

            .rwd-table th,
            .rwd-table td {
                padding: 1em !important;
            }

            .rwd-table tr:nth-of-type(2n) {
                background: #FFF !important;
            }
        }
    </style>
}

<div class="middle-content">

    <h2 class="mt-3">退換貨管理</h2>

    <div class="search-row row mt-3 mb-3">
        <div class="row align-items-center mb-3">
            退換貨日期：
            <input type="text" class="form-control w-25" name="dates" />
        </div>
        <div class="row align-items-center mb-3">
            原因類別：
            <select class="form-select w-25" id="statusList">
                <option value="" selected>全部訂單</option>
                <option value="">商品品質問題</option>
                <option value="">不符合期望</option>
                <option value="">送錯商品</option>
                <option value="">重複運送商品</option>
                <option value="">訂單問題</option>
                <option value="">售後服務問題</option>
                <option value="">改變主意</option>
                <option value="">其他原因</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            退換貨狀態：
            <select class="form-select w-25" id="statusList">
                <option value="" selected>全部訂單</option>
                <option value="">待處理</option>
                <option value="">審核中</option>
                <option value="">已批准</option>
                <option value="">待退貨</option>
                <option value="">待換貨</option>
                <option value="">退貨中</option>
                <option value="">換貨中</option>
                <option value="">已完成</option>
                <option value="">取消</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            關鍵字搜尋：
            <input type="text" class="form-control" style="width:25%;" />
        </div>

        <button type="button" class="keyword_input col-xl-1">查詢</button>
    </div>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="SReturn-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>訂單ID</th>
                            <th>會員ID</th>
                            <th>會員姓名</th>
                            <th>退換貨日期</th>
                            <th>退換貨原因</th>
                            <th>狀態</th>
                            <th>詳細資料</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                </table>
                <!--表格-->
                <!--編輯彈出視窗-->
                <div class="modal fade" id="returnEditModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalToggleLabel">編輯退換貨資料</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!--內容表單-->
                                <div class="row">

                                    <input type="hidden" class="form-control" id="orderId" readonly disabled>

                                    <div class="col-12">
                                        <label>退換貨原因</label>
                                        <select class="form-select" id="returnReasonId">
                                            <option value="1">商品品質問題</option>
                                            <option value="2">不符合期望</option>
                                            <option value="3">送錯商品</option>
                                            <option value="4">重複運送商品</option>
                                            <option value="5">訂單問題</option>
                                            <option value="6">售後服務問題</option>
                                            <option value="7">改變主意</option>
                                            <option value="8">其他原因</option>
                                        </select>
                                    </div>
                                    <div class="col-12">
                                        <label>狀態</label>
                                        <select class="form-select" id="processingStatusId">
                                            <option value="1">待處理</option>
                                            <option value="2">審核中</option>
                                            <option value="3">已批准</option>
                                            <option value="4">待退貨</option>
                                            <option value="5">待換貨</option>
                                            <option value="6">退貨中</option>
                                            <option value="7">換貨中</option>
                                            <option value="8">已完成</option>
                                            <option value="9">取消</option>
                                        </select>
                                    </div>

                                    <button type="button" class="mt-3 btn btn-danger btn-block editReturn_save"
                                            style="width: 100%;">
                                        儲存
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->
                <div class="modal fade" id="returnDetailModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title bg-dark text-white" id="exampleModalToggleLabel">
                                    詳細資訊
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-home-tab"
                                                data-bs-toggle="tab" data-bs-target="#nav-home" type="button"
                                                role="tab">
                                            訂購人 / 收件人資料
                                        </button>
                                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab"
                                                data-bs-target="#nav-profile" type="button"
                                                role="tab">
                                            訂單明細
                                        </button>
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                         aria-labelledby="nav-home-tab">
                                        <div class="row">
                                            <div class="col-12 col-lg-6" style="border-right: 1px solid #000;">
                                                <h5><strong>訂購人(會員)</strong></h5>
                                                <p id="order_memberId"></p>
                                                <p id="order_name"></p>
                                                <p id="order_memberAccount"></p>
                                                <p id="order_gender"></p>
                                                <p id="order_birthday"></p>
                                                <p id="order_email"></p>
                                                <p id="order_phoneNumber"></p>
                                                <p id="order_address"></p>
                                                <p id="order_registrationTime"></p>
                                                <p id="order_lastLoginTime"></p>
                                                <p id="order_memberStatus"></p>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <h5><strong>收件人</strong></h5>
                                                <p id="order_recipientName"></p>
                                                <p id="order_recipientPhone"></p>
                                                <p id="order_recipientAddress"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel">
                                        <div class="row">
                                            <div class="col-12 col-lg-6">
                                                <p id="order_orderId"></p>
                                                <p id="order_paymentMethod"></p>
                                                <p id="order_shippment"></p>
                                                <p id="order_totalPrice"></p>
                                                <p id="order_lastUpdateTime"></p>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <p id="order_orderCreationDate"></p>
                                                <p id="order_shippingMethod"></p>
                                                <p id="order_couponContent"></p>
                                                <p id="order_orderStatus"></p>
                                            </div>
                                            <div class="col-12">
                                                <!--下拉卷軸-->
                                                <button class="create_btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                                    訂購產品明細
                                                </button>
                                                <div class="collapse show" id="collapseExample">
                                                    <div class="card card-body">
                                                        <div id="ProductTotalContainer"></div>
                                                    </div>
                                                </div>
                                                <!--下拉卷軸-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->
                @section Scripts{

                    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
                    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
                    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

                    <script>
                        $('input[name="dates"]').daterangepicker();

                        $(document).ready(function () {
                            $.ajax({
                                url: '@Url.Action("ShowReturnTotal", "Return")',
                                type: 'GET',
                                success: function (data) {
                                    console.log(data);
                                },
                                error: function () {
                                    console.log("error:" + error);
                                }
                            });

                            //==================datatable
                            $('#SReturn-table').DataTable({
                                "ajax": '@Url.Action("ShowReturnTotal", "Return")',

                                "columns": [
                                    { data: 'orderId' },
                                    { data: 'memberId' },
                                    { data: 'name' },
                                    { data: 'returnDate' },
                                    { data: 'returnReason' },
                                    { data: 'statusName' },
                                    {
                                        data: null, // 這裡設置為 null，因為我們會在 render 中創建按鈕
                                        render: function (data, type, row, meta) {
                                            // return '<button class="detail_input" data-bs-toggle="modal" href="#DetailModalToggle" role="button" data-memberid="' + row.memberId + '">詳細資料</button>';
                                            return '<button class="detail_input" data-bs-toggle="modal" href="#returnDetailModalToggle" role="button"  data-orderid="' + row.orderId + '" data-memberId="' + row.memberId + '">詳細資料</button>';
                                        }
                                    },
                                    {
                                        data: null,
                                        render: function (data, type, row, meta) {
                                            var editButton = '<button class="btn edit_orderbtn" data-bs-toggle="modal" href="#returnEditModalToggle" role="button" data-orderid="' + row.orderId + '"><i class="fas fa-edit"></i></button>';
                                            return editButton;
                                        }
                                    },
                                ],
                                "paging": true, //分頁功能
                                responsive: true, //RWD
                                "searching": false, //隱藏搜尋框
                            });

                            //==================按下「詳細資料」按鈕的點擊事件處理
                            $('#SReturn-table').on('click', '.detail_input', function () {
                                var memberId = $(this).data('memberid'); // 從按鈕的 data-memberid 屬性中獲取 memberId
                                var orderId = $(this).data('orderid');
                                // console.log('Clicked on "詳細資料" button for memberId:', memberId);

                                //----------------AJAX
                                $.ajax({
                                    url: '@Url.Action("GetOrderDetails", "Order")',
                                    type: 'GET',
                                    data: { memberId: memberId, orderId: orderId }, // id=>這個名稱要確保欄位跟controller的參數名稱相同（傳遞會員ID或其他必要的參數）
                                    success: function (data) {
                                        console.log(data.data.orderTotal);

                                        //============訂購人(會員)基本資料
                                        $('#order_memberId').text("ID：" + data.data.memberInfo.memberId);
                                        $('#order_name').text("姓名：" + data.data.memberInfo.name);
                                        $('#order_memberAccount').text("帳號：" + data.data.memberInfo.memberAccount);
                                        $('#order_gender').text("性別：" + data.data.memberInfo.gender);
                                        $('#order_birthday').text("生日：" + data.data.memberInfo.birthday);
                                        $('#order_email').text("E-mail：" + data.data.memberInfo.email);
                                        $('#order_phoneNumber').text("電話：" + data.data.memberInfo.phoneNumber);
                                        $('#order_address').text("地址：" + data.data.memberInfo.address);
                                        $('#order_registrationTime').text("註冊日期：" + data.data.memberInfo.registrationTime);
                                        $('#order_lastLoginTime').text("最後登入：" + data.data.memberInfo.lastLoginTime);

                                        if (data.data.memberInfo.memberStatus == true) {
                                            $('#order_memberStatus').text("會員狀態：開放");
                                        } else {
                                            $('#order_memberStatus').text("會員狀態：凍結");
                                        }

                                        //============收件人資料
                                        $('#order_recipientName').text("收件人：" + data.data.orderTotal.recipientName);
                                        $('#order_recipientPhone').text("收件人電話：" + data.data.orderTotal.recipientPhone);
                                        $('#order_recipientAddress').text("收件地址：" + data.data.orderTotal.recipientAddress);

                                        //============訂單明細
                                        $('#order_orderId').text("訂單編號：" + data.data.orderTotal.orderId);
                                        $('#order_paymentMethod').text("付款方式：" + data.data.paymentMethod);

                                        if (data.data.shippment == null) {
                                            $('#order_shippment').text("運費：無");
                                        } else {
                                            $('#order_shippment').text("運費：" + data.data.shippment);
                                        }

                                        if (data.data.couponContent == null) {
                                            $('#order_couponContent').text("優惠券內容：無");
                                        } else {
                                            $('#order_couponContent').text("優惠券內容：" + data.data.couponContent);
                                        }

                                        if (data.data.couponContent == null) {
                                            $('#order_shippingMethod').text("配送方式：無");
                                        } else {
                                            $('#order_shippingMethod').text("配送方式：" + data.data.shippingMethod);
                                        }

                                        $('#order_lastUpdateTime').text("最後更新：" + data.data.orderTotal.lastUpdateTime);
                                        $('#order_orderCreationDate').text("訂單成立日期：" + data.data.orderTotal.orderCreationDate);
                                        $('#order_orderStatus').text("訂單狀態：" + data.data.orderStatus);

                                        //===========訂購產品明細
                                        var PTContainer = $("#ProductTotalContainer");
                                        var totalPrice = 0; // 用於累加小計，秀出總金額
                                        PTContainer.html(""); // 使用html()方法來重置容器內容

                                        if (data.data.orderDetails.length != 0) {
                                            var tableHTML = `
                                                                    <table class="rwd-table">
                                                                        <thead style='border-bottom: 1px solid #ddd;'>
                                                                            <tr>
                                                                                <th>項次</th>
                                                                                <th>商品ID</th>
                                                                                <th>名稱</th>
                                                                                <th>數量</th>
                                                                                <th>單價</th>
                                                                                <th>小計</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                `;

                                            for (var i = 0; i < data.data.orderDetails.length; i++) {
                                                var item = data.data.orderDetails[i];
                                                var orderNumber = i + 1;

                                                var subTotal = item.product.productPrice * item.productQuantity; // 計算小計
                                                totalPrice += subTotal; // 將小計累加到總金額中

                                                tableHTML += `
                                                                        <tr>
                                                                                                    <td data-th="項次">${orderNumber}</td>
                                                                                                    <td data-th="商品ID">${item.product.productId}</td>
                                                                                                    <td data-th="名稱">${item.product.productName}</td>
                                                                                                    <td data-th="數量">${item.productQuantity}</td>
                                                                                                    <td data-th="單價">${item.product.productPrice}</td>
                                                                                                                            <td data-th="小計">${subTotal}</td>
                                                                        </tr>
                                                                    `;
                                            }

                                            tableHTML += `
                                                                        </tbody>
                                                                    </table>
                                                                `;

                                            PTContainer.html(tableHTML);

                                            // 將總金額填入指定的元素中
                                            $("#order_totalPrice").text(`總金額：NT＄${totalPrice.toLocaleString()} (未含運費)`);
                                        } else {
                                            PTContainer.text("沒有可顯示的產品明細");
                                        }
                                    },
                                    error: function (error, a, b) {
                                        console.log(error);
                                        console.log(a);
                                        console.log(b);
                                        console.log("Error retrieving order details.");
                                    }
                                });
                            });

                            //==================按下「編輯」按鈕的點擊事件處理
                            $('#SReturn-table').on('click', '.edit_orderbtn', function () {
                                var orderId = $(this).data('orderid'); // 從按鈕的 data-memberid 屬性中獲取 memberId

                                console.log(orderId);

                                //----------------AJAX
                                $.ajax({
                                    url: '@Url.Action("EditReturn", "Return")',
                                    type: 'GET',
                                    data: { id: orderId }, // id=>這個名稱要確保欄位跟controller的參數名稱相同（傳遞會員ID或其他必要的參數）
                                    success: function (data) {
                                        console.log(data);

                                        //==================退貨資料
                                        $('#orderId').val(data.data.orderId);
                                        $('#processingStatusId').val(data.data.processingStatusId);
                                        $('#returnReasonId').val(data.data.returnReasonId);
                                    },
                                    error: function (error) {
                                        console.error(error);
                                    }
                                });
                            });

                            //==================編輯資料後，按下「儲存」按鈕的點擊事件處理
                            $('.editReturn_save').click(function () {

                                //==================退換貨資料
                                var orderId = $('#orderId').val();
                                var returnReasonId = $('#returnReasonId').val();
                                var processingStatusId = $('#processingStatusId').val();


                                var editReturn = {
                                    orderId: orderId,
                                    returnReasonId: returnReasonId,
                                    processingStatusId: processingStatusId,
                                };

                                console.log(editReturn);
                                // return;

                                $.ajax({
                                    url: '/AdminCMS/Return/UpdateReturn',
                                    type: 'POST',
                                    data: { editReturn: editReturn },
                                    success: function (response) {
                                        if (response.success) {
                                            // 更新成功的處理
                                            // 顯示成功訊息
                                            Swal.fire({
                                                icon: 'success',
                                                title: '編輯成功',
                                                text: response.message
                                            });

                                            // 關閉modal
                                            $('#returnEditModalToggle').modal('hide');

                                            // 重新整理dataTable
                                            $('#SReturn-table').DataTable().ajax.reload(); // 這將重新載入dataTable的資料
                                        } else {
                                            // 更新失敗
                                            Swal.fire({
                                                icon: 'error',
                                                title: '失敗',
                                                text: response.message
                                            });
                                        }
                                    },
                                    error: function (error) {
                                        // 錯誤處理
                                        // 會員編輯失敗，顯示錯誤訊息
                                        console.log(error);
                                    }
                                });
                            })
                        });
                    </script>
                }

