@{
    ViewData["Title"] = "Return";
    Layout = "~/Areas/AdminCMS/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{

}

<div class="middle-content">

    <h2 class="mt-3">退換貨管理</h2>

    <div class="search-row row mt-3 mb-3">
        <div class="row align-items-center mb-3">
            退換貨日期：
            <input type="text" class="form-control w-25" name="dates" />
        </div>
        <div class="row align-items-center mb-3">
            原因類別：
            <select class="form-select w-25" id="statusList">
                <option value="" selected>全部訂單</option>
                <option value="">商品品質問題</option>
                <option value="">不符合期望</option>
                <option value="">送錯商品</option>
                <option value="">重複運送商品</option>
                <option value="">訂單問題</option>
                <option value="">售後服務問題</option>
                <option value="">改變主意</option>
                <option value="">其他原因</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            退換貨狀態：
            <select class="form-select w-25" id="statusList">
                <option value="" selected>全部訂單</option>
                <option value="">待處理</option>
                <option value="">審核中</option>
                <option value="">已批准</option>
                <option value="">待退貨</option>
                <option value="">待換貨</option>
                <option value="">退貨中</option>
                <option value="">換貨中</option>
                <option value="">已完成</option>
                <option value="">取消</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            關鍵字搜尋：
            <input type="text" class="form-control" style="width:25%;" />
        </div>

        <button type="button" class="keyword_input col-xl-1">查詢</button>
    </div>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="SReturn-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>訂單ID</th>
                            <th>退換貨日期</th>
                            <th>退換貨原因</th>
                            <th>狀態</th>
                            <th>詳細資料</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>1</td>
                            <td>2023/08/03</td>
                            <td>商品品質問題</td>
                            <td>處理中</td>
                            <td>
                                <a href="#">
                                    <button class="detail_input" data-bs-toggle="modal"
                                            href="#orderDetailModalToggle" role="button">
                                        訂單明細
                                    </button>
                                </a>
                            </td>
                            <td>
                                <a href="#">
                                    <button class="btn" data-bs-toggle="modal"
                                            href="#returnEditModalToggle" role="button">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!--表格-->
                <!--編輯彈出視窗-->
                <div class="modal fade" id="returnEditModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!--內容表單-->
                                <div class="row">

                                    <div class="col-md-6">
                                        <label>ID</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label>退換貨原因</label>
                                        <select class="form-select">
                                            <option value="">商品品質問題</option>
                                            <option value="">不符合期望</option>
                                            <option value="">送錯商品</option>
                                            <option value="">重複運送商品</option>
                                            <option value="">訂單問題</option>
                                            <option value="">售後服務問題</option>
                                            <option value="">改變主意</option>
                                            <option value="">其他原因</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label>退換貨日期</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label>狀態</label>
                                        <select class="form-select">
                                            <option value="">待處理</option>
                                            <option value="">審核中</option>
                                            <option value="">已批准</option>
                                            <option value="">待退貨</option>
                                            <option value="">待換貨</option>
                                            <option value="">退貨中</option>
                                            <option value="">換貨中</option>
                                            <option value="">已完成</option>
                                            <option value="">取消</option>
                                        </select>
                                    </div>

                                    <button type="submit" class="mt-3 btn btn-primary btn-block"
                                            style="width: 100%;">
                                        儲存
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->
                <div class="modal fade" id="orderDetailModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title bg-dark text-white" id="exampleModalToggleLabel">
                                    詳細資訊
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-home-tab"
                                                data-bs-toggle="tab" data-bs-target="#nav-home" type="button"
                                                role="tab">
                                            訂購人 / 收件人資料
                                        </button>
                                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab"
                                                data-bs-target="#nav-profile" type="button"
                                                role="tab">
                                            訂單明細
                                        </button>
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                         aria-labelledby="nav-home-tab">
                                        <div class="row">
                                            <div class="col-12 col-sm-6">
                                                <strong>訂購人</strong>
                                                <p>ID</p>
                                                <p>姓名：</p>
                                                <p>帳號：</p>
                                                <p>性別：</p>
                                                <p>生日：</p>
                                                <p>E-mail：</p>
                                                <p>電話：</p>
                                                <p>地址：</p>
                                                <p>註冊日期：</p>
                                                <p>最後登入：</p>
                                                <p>會員狀態：</p>
                                            </div>
                                            <div class="col-12 col-sm-6">
                                                <strong>收件人</strong>
                                                <p>收件人：XXX</p>
                                                <p>收件地址：</p>
                                                <p>收件電話：</p>
                                                <p>收件地址：</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel">
                                        <div class="row">
                                            <div class="col-12 col-sm-6">
                                                <p>訂單編號：：20230816001</p>
                                                <p>付款方式：超商 7-ELEVEN 取貨付款</p>
                                                <p>折抵紅利：10 (元)</p>
                                                <p>優惠券：1 (張)</p>
                                                <p>運費：70</p>
                                                <p>總金額：860元</p>
                                            </div>
                                            <div class="col-12 col-sm-6">
                                                <p>訂單成立日期：2023/08/16 13:02</p>
                                                <p>付款時間：2023/08/16 14:32</p>
                                                <p>全館優惠：無</p>
                                                <p>優惠券內容：滿300折10元</p>
                                                <p>完成時間：未完成</p>
                                                <p>配送狀態：配送中</p>
                                            </div>
                                            <div class="col-12">
                                                <!--下拉卷軸-->
                                                <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                                    訂購產品明細
                                                </button>
                                                <div class="collapse" id="collapseExample">
                                                    <div class="card card-body">
                                                        <p>產品名稱：貓砂</p>
                                                        <p>產品規格：300g</p>
                                                        <p>訂購數量：２(包)</p>
                                                        <p>單價：300</p>
                                                        <p>小計：600 元</p>
                                                        <hr />
                                                        <p>產品名稱：貓抓板</p>
                                                        <p>產品規格：20cm*50cm</p>
                                                        <p>訂購數量：1(個)</p>
                                                        <p>單價：200</p>
                                                        <p>小計：200 元</p>
                                                    </div>
                                                </div>
                                                <!--下拉卷軸-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->
                @section Scripts{

                    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
                    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
                    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

                    <script>
                        $('input[name="dates"]').daterangepicker();
                        new DataTable('#SReturn-table', {
                            responsive: true,
                            "searching": false, //隱藏搜尋框
                        });
                    </script>
                }

