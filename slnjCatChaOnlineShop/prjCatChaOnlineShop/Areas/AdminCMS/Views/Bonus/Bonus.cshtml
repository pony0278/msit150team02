<div class="middle-content">

    <div class="row align-items-center">
        <div class="col-6">
            <h2 class="mt-3">優惠券管理</h2>
        </div>
        <div class="col-6 text-end mt-3">
            <button class="btn btn-primary" data-bs-toggle="modal" href="#addModalToggle"
                    role="button">
                新增優惠券
            </button>
        </div>
    </div>



    <!---新增優惠券 modal-->
    <div class="modal fade" id="addModalToggle" aria-hidden="true"
         aria-labelledby="addCouponModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addCouponModalToggleLabel">新增優惠券</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                        <div class="form-group">
                            <!-- <label>ID：</label> -->
                            <input type="hidden" class="form-control" disabled readonly id="create-id" name="CouponId">
                        </div>

                        <div class="form-group">
                            <label>名稱：</label>
                            <input type="text" class="form-control" id="create-name" name="CouponName">
                        </div>

                        <div class="form-group">
                            <label>內容：</label>
                            <input type="text" class="form-control" id="create-content" name="CouponContent">
                        </div>

                        <div class="form-group">
                            <label>到期日：</label>
                            <input type="date" class="form-control" id="create-expirydate" name="ExpiryDate">
                        </div>

                        <div class="form-group">
                            <label>總數量：</label>
                            <input type="text" class="form-control" id="create-quantity" name="TotalQuantity">
                        </div>

                        <div class="col-md-6">
                            <label>是否可使用：</label>
                            <select class="form-select" id="create-usable" name="Usable">
                                <option value="" selected disabled>請選擇狀態</option>
                                <option value="true">是</option>
                                <option value="false">否</option>
                             </select>
                        </div>

                        <button type="submit" class="mt-3 btn btn-primary btn-block" name="create-submitButton" id="create-submitButton"
                                style="width: 100%;">
                            儲存
                        </button>
                </div>
            </div>
        </div>
    </div>
    <!---新增優惠券 modal-->

    <!---篩選優惠券狀態-->
    <div class="container-fluid mt-4 mb-3">
        <div class="row align-items-center mb-2">
            狀態篩選：
            <div class="col d-flex justify-content-between">
                <select class="form-select" id="statusList">
                    <option value="" selected disabled>請選擇狀態</option>
                    <option value="">全部</option>
                    <option value="是">是</option>
                    <option value="否">否</option>
                </select>
            </div>
        </div>
    </div>
    <!---篩選優惠券狀態-->

    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="Bonus-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>ID</th>
                            <th>名稱</th>
                            <th>內容</th>
                            <th>到期日</th>
                            <th>總數量</th>
                            <th>是否可使用</th>                            
                            <th>發送至會員</th>
                            <th>編輯/刪除</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!--編輯彈出視窗-->
                        <div class="modal fade" id="EditModalToggle" aria-hidden="true"
                             aria-labelledby="EditModalToggleLabel" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="EditModalToggleLabel">編輯優惠券</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!--內容表單-->
                                        <div class="row">
                                            <div class="form-group">
                                                <label>ID</label>
                                                <input type="text" class="form-control" readonly disabled id="edit-id" name="CouponId">
                                            </div>
                                            <div class="form-group">
                                                <label>名稱</label>
                                                <input type="text" class="form-control" id="edit-name" name="CouponName">
                                            </div>
                                            <div class="form-group">
                                                <label>內容</label>
                                                <input type="text" class="form-control" id="edit-content" name="CouponContent">
                                            </div>
                                            <div class="form-group">
                                                <label>到期日</label>
                                                <input type="date" class="form-control" id="edit-expirydate" name="ExpiryDate">
                                            </div>
                                            <div class="form-group">
                                                <label>總數量：</label>
                                                <input type="text" class="form-control" id="edit-quantity" name="TotalQuantity">
                                            </div>

                                            <div class="form-group">
                                                <label>是否可使用：</label>
                                                <select class="form-select" id="edit-usable" name="Usable">
                                                    <option value="" selected disabled>請選擇狀態</option>
                                                    <option value="true">是</option>
                                                    <option value="false">否</option>
                                                </select>
                                            </div>

                                            <button type="submit" class="mt-3 btn btn-primary btn-block" name="edit-submitButton" id="edit-submitButton"
                                                    style="width: 100%;">
                                                儲存
                                            </button>
                                        </div>
                                        <!--內容表單-->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--編輯彈出視窗-->

                        <!--發送至會員-->
                        <div class="modal fade" id="sendtoMember" aria-hidden="true"
                             aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalToggleLabel">發送至會員</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <!--內容表單-->
                                        <div class="row">
                                    <div class="form-group">
                                        <label>會員編號</label>
                                        <input type="text" class="form-control" id="sent-memberID" name="MemberID" >
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="mt-3 btn btn-primary btn-block" name="SendToMember" id=" SendToMember"
                                                style="width: 50%;">
                                            發送
                                        </button>

                                    <div class="form-group">
                                                <button type="submit" class="mt-3 btn btn-primary btn-block " name="SendCouponToAllMembers" id=" SendCouponToAllMembers"
                                                        style="width: 100%;">
                                                    發送優惠券給所有會員
                                                </button>
                                            </div>

                                        <div class="form-group">
                                            <button type="submit" class="mt-3 btn btn-primary btn-block " name="SendNotify" id=" SendNotify"
                                                    style="width: 100%;">
                                                發送到期提醒
                                            </button>
                                        </div>

                                            </div>

                                        </div>
                                        <!--內容表單-->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--發送至會員-->
                    </tbody>
                </table>
                <!--表格-->
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <!--Moment.js-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment-with-locales.min.js"></script>
    <script>
        //查看Json檔案=========================
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("LoadDataTable", "Bonus")',
                type: 'GET',
                success: function (data) {
                    console.log(data);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });
        //載入資料庫資料 LoadDataTable===========
            var table = $('#Bonus-table').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.6/i18n/zh-HANT.json',
            },
            "responsive": true,
            "searching": true,
            "processing": true,
            "serverSide": false,
            "paging": true,
            "pagingType": "full_numbers",
            "pageLength": 10,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "全部"]],
            "info": true,
            "ajax": {
                "url": "@Url.Action("LoadDataTable", "Bonus" , new{ area="AdminCMS"})",
                type: 'GET',
            },
            "columns": [
                { "data": "couponId" },
                { "data": "couponName" },
                { "data": "couponContent" },
                { 
                    "data": "expiryDate",
                     "render": function (data) {
                        // 將日期格式轉換為 JavaScript Date 物件
                        var date = new Date(data);
                        // 格式化日期為 yyyy-MM-dd 格式，使用 Moment.js
                        var formattedDate = moment(date).format("YYYY-MM-DD");
                        return formattedDate;
                    }
                },
                { "data": "totalQuantity" },
                { "data": "usable" },
                {
                    "data": "couponId",
                    "render": function (data, type, row) {
                        var sendButton = `<button class="btn btn-primary" data-id="${row.couponId}" data-bs-toggle="modal" data-bs-target="#sendtoMember">發送</button>`;
                        return sendButton;
                    }
                },
                {
                    "data": "couponId",
                    "render": function (data, type, row) {
                        var deleteUrl = '@Url.Action("Delete", "Bonus", new { area = "AdminCMS", id = "couponId" })';
                        deleteUrl = deleteUrl.replace('couponId', row.couponId);
                        return `<button class="edit-button" data-id="${row.couponId}" data-bs-toggle="modal" data-bs-target="#EditModalToggle"><i class="fas fa-edit"></i></button> |
                                                                                                                                <button class="btn delete-button" data-id="${row.couponId}" ><i class="fas fa-trash-alt"></i></button>`
                    }
                }
            ],
            //類別篩選
            columnDefs: [
                { targets: 5, searchable: true },  //第6欄，索引5
            ],
        });
        //篩選功能=======================================
        $('#statusList').on('change', function () {
            var filterOption1 = $(this).val();
            table.column(5).search(filterOption1).draw();
        });
        //編輯按鈕========================================
        $('#Bonus-table').on('click', '.edit-button', function () {
            let id = $(this).data('id')
            $.ajax({
                url: '/AdminCMS/Bonus/EditCoupon?id=' + id,
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        $('#edit-id').val(response.data.couponId);
                        $('#edit-name').val(response.data.couponName);
                        $('#edit-content').val(response.data.couponContent);

                        //日期轉換：use Moment.js
                        var date = moment(response.data.expiryDate);
                        // 格式化日期為 yyyy-MM-dd 格式
                        var formattedDate = date.format("YYYY-MM-DD");
                        $('#edit-expirydate').val(formattedDate);


                        $('#edit-quantity').val(response.data.totalQuantity);
                        $('#edit-usable').val(response.data.usable);
                        console.log(response.data)

                    } else {
                        alert(response.message);
                    }
                }
            });
        });

        //編輯中的儲存按鈕==============================
        $('#edit-submitButton').click(function () {
            const id = $('#edit-id').val();
            const name = $('#edit-name').val();
            const content = $('#edit-content').val();
            const expirydate = $('#edit-expirydate').val();
            const quantity = $('#edit-quantity').val();
            const usable = $('#edit-usable').val();

            var formData = new FormData();
            formData.append("CouponId", id);
            formData.append("CouponName", name);
            formData.append("CouponContent", content);
            formData.append("ExpiryDate", expirydate);
            formData.append("TotalQuantity", quantity);
            formData.append("Usable", usable);


            $.ajax({
                url: "@Url.Action("EditCoupon","Bonus" , new { area="AdminCMS" })",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        showSuccessMessage("編輯成功", response.message);
                        closeModalAndReloadTable();
                    } else {
                        showErrorMessage("編輯失敗", response.message);
                    }
                },
                error: function (error) {
                    console.error("AJAX Request Error:", error);
                }
            });

            function showSuccessMessage(title, message) {
                Swal.fire({
                    icon: 'success',
                    title: title,
                    text: message
                });
            }

            function showErrorMessage(title, message) {
                Swal.fire({
                    icon: 'error',
                    title: title,
                    text: message
                });
            }

            function closeModalAndReloadTable() {
                $('#EditModalToggle').modal('hide');
                $('#Bonus-table').DataTable().ajax.reload();
            }
        });
        //新增商品的儲存按鈕===========================
        $('#create-submitButton').click(function () {
            const id = $('#create-id').val();
            const name = $('#create-name').val();
            const content = $('#create-content').val();
            const expirydate = $('#create-expirydate').val();
            const quantity = $('#create-quantity').val();
            const usable = $('#create-usable').val();

            var formData = new FormData();
            formData.append("CouponId", id);
            formData.append("CouponName", name);
            formData.append("CouponContent", content);
            formData.append("ExpiryDate", expirydate);
            formData.append("TotalQuantity", quantity);
            formData.append("Usable", usable);


            $.ajax({
                url: "@Url.Action("CreateCoupon","Bonus" , new { area="AdminCMS" })",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '新增成功',
                            text: response.message
                        });

                        $('#addModalToggle').modal('hide');
                        $('#Bonus-table').DataTable().ajax.reload();
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: '失敗',
                            text: response.message
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        })

        //刪除==========================================

        $(document).ready(function () {
            $(document).on("click", ".delete-button", function () {
                var couponId = $(this).data("id");

                Swal.fire({
                    title: '確定要刪除嗎?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var deleteButton = $(this);
                        $.ajax({
                            url: "/AdminCMS/Bonus/Delete",
                            type: "POST",
                            data: { id: couponId },
                            success: function (response) {
                                if (response.success) {
                                    console.log("項目已成功刪除");
                                    deleteButton.closest("tr").remove();
                                    $('#Bonus-table').DataTable().ajax.reload();
                                    showSuccessMessage("刪除成功", response.message);
                                } else {
                                    console.log("刪除項目失敗。");
                                    showErrorMessage("刪除失敗", response.message);
                                }
                            },
                            error: function (error) {
                                console.log("刪除項目時發生錯誤：", error);
                                showErrorMessage("刪除時發生錯誤", "請稍後再試。");
                            }
                        });
                        function showSuccessMessage(title, message) {
                            Swal.fire({
                                icon: 'success',
                                title: title,
                                text: message
                            });
                        }

                        function showErrorMessage(title, message) {
                            Swal.fire({
                                icon: 'error',
                                title: title,
                                text: message
                            });
                        }
                    }
                });
            });
        });

        //發送至所有會員=======================
        $(document).ready(function () {
            $(document).on("click", ".SendCouponToAllMembers", function () {
                var couponId = $(this).data("id");

                Swal.fire({
                    title: '確定要發送優惠券嗎?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: '確認發送'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: "/AdminCMS/Bonus/SendCouponToMembers",
                            type: "POST",
                            data: { id: couponId },
                            success: function (response) {
                                if (response.success) {
                                    console.log("發送成功");
                                    $('#sendtoMember').modal('hide');
                                } else {
                                    console.log("發送失敗");
                                }
                            },
                            error: function (error) {
                                console.log("發生錯誤：", error);
                            }
                        });
                    }
                });
            });
        });

        //發送至會員-依MemberID
        $(document).ready(function () {
            $(document).on("click", ".SendToMember", function () {
                var couponId = $(this).data("id");
                var memberId = $("#sent-memberID").val(); // 獲取輸入的 MemberId

                Swal.fire({
                    title: '確定要發送優惠券嗎?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: '確認發送'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: "/AdminCMS/Bonus/SendCouponToMembersByID",
                            type: "POST",
                            data: { id: couponId, memberId: memberId }, // 傳遞 MemberId 到後端
                            success: function (response) {
                                if (response.success) {
                                    console.log("發送成功");
                                    $('#sendtoMember').modal('hide');
                                } else {
                                    console.log("發送失敗");
                                }
                            },
                            error: function (error) {
                                console.log("發生錯誤：", error);
                            }
                        });
                    }
                });
            });
        });
    </script>
}
