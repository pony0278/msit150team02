@section Scripts{

    <script>
        //確認JSon資料============================
        $(document).ready(function () {
            $.ajax({
                url: '@Url.Action("LoadDataTable", "Banner")',
                type: 'GET',
                success: function (data) {
                    console.log(data);
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });

        //初始化表格==================================================
        $(document).ready(function () {
            var table = $('#Banner-table').DataTable({
                responsive: true,
                "paging": true,
                "ajax": {
                    "url": "@Url.Action("LoadDataTable", "Banner" , new{ area="AdminCMS"})",
                    type: 'GET',
                },
                //載入欄位資料庫資料==========================================
                "columns": [
                    { "data": "bannerId" },
                    { "data": "banner" },
                    { "data": "publishDate" },
                    {
                        "data": "link",
                        render: function (data, type, row) {
                            return `<img class="img-thumbnail" src="${data}">`;
                        }
                    },
                    {
                        "data": "bannerId",
                        "render": function (data, type, row) {
                            var deleteUrl = '@Url.Action("Delete", "Bannrt", new { area = "AdminCMS", id = "bannerId" })';
                            deleteUrl = deleteUrl.replace('bannerId', row.bannerId);
                            return `<button class="edit-button" data-id="${row.bannerId}" data-bs-toggle="modal" data-bs-target="#EditBannerModalToggle"><i class="fas fa-edit"></i></button> |
                                                                                                                <button class="btn delete-button" data-id="${row.bannerId}" ><i class="fas fa-trash-alt"></i></button>
        `;
                        }
                    }
                ]
            })
        });
        //編輯按鈕==============================================
        $('#Banner-table').on('click', '.edit-button', function () {
            let id = $(this).data('id')
            $.ajax({
                url: '/AdminCMS/Banner/EditBanner?id=' + id,
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        $('#editor-id').val(response.data.bannerId);
                        $('#editor-name').val(response.data.banner);
                        $('#editor-date').val(response.data.publishDate);
                        $('#previewImage').attr('src', response.data.link)
                        console.log(response.data)
                       
                    } else {
                        alert(response.message);
                    }
                }
            });
        });

        //編輯圖片部分======================================
        $('#editor-img').on('change', function () {
            const file = this.files[0];

            if (file && file.type.startsWith('image/')) {
                const reader = new FileReader();

                reader.onload = function (e) {
                    $('#previewImage').attr('src', e.target.result);
                };

                reader.readAsDataURL(file);
            } else {
                alert('請選擇圖片.');
            }
        });

        //儲存按鈕==============================
        $('#submitButton-edior').click(function () {
            var id = $('#editor-id').val();
            var name = $('#editor-name').val()
            var date = $('#editor-date').val()
            var fileInput = $('#image');
            var file = fileInput.files;

            var formData = new FormData();
            formData.append("BannerId", id);
            formData.append("Banner", name);
            formData.append("PublishDate)", date);
            if (file) {
                for (var i = 0; i < file.length; i++) {
                    formData.append("Link", file[i])
                }
            }

            $.ajax({
                url: "@Url.Action("EditBanner","Banner" , new { area="AdminCMS" })",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: '編輯成功',
                            text: response.message
                        });

                        $('#EditBannerModalToggle').modal('hide');
                        $('#Banner-table').DataTable().ajax.reload(); 
                    }
                    else {
                        更新失敗
                        Swal.fire({
                            icon: 'error',
                            title: '失敗',
                            text: response.message
                        });
                    }
                },
                error: function (error) {
                    console.log(error);
                }
            });
        })

        //新增==================================

        $(document).on("click", "#submitButton", function () {
            const name = $("#create-name").val();
            const publishdate = $("#editor-date").val();
            var fileInput = $("#create-image");
            var file = fileInput.files;

            let formData = new FormData();
            formData.append("Banner", name)
            formData.append("PublishDate", publishdate);
            if (file) {
                for (let i = 0; i < file.length; i++) {
                    formData.append("Link", file[i])
                }
            }
            $.ajax({
                url: "@Url.Action("CreateBanner" , "Banner" , new { area="AdminCMS" })",
                type: "POST",
                data: formData,
                processData: false,
                contentType: false,
                success: function (response) {
                    alert("Content saved successfully!");
                    $('#addBannerModalToggle').modal('hide');
                    $('#Banner-table').DataTable().ajax.reload();
                }
            })
        })
        //圖片
        $(document).on("change", "#preview-createimage", function () {
            var files = $(this)[0].files;
            var preview = $("#preview-createimage");
            preview.empty();

            for (var i = 0; i < files.length; i++) {
                var file = files[i];
                var img = $("<img>").addClass("img-thumbnail");
                var reader = new FileReader();
                reader.onload = (function (aImg) {
                    return function (e) {
                        aImg.attr("src", e.target.result);
                    };
                })(img);
                reader.readAsDataURL(file);
                preview.append(img);
            }
        });


        //刪除================================================

        $(document).ready(function () {
            $(document).on("click", ".delete-button", function () {
                var bannerId = $(this).data("id");

                Swal.fire({
                    title: '確定要刪除嗎?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        var deleteButton = $(this);
                        $.ajax({
                            url: "/AdminCMS/Banner/Delete",
                            type: "POST",
                            data: { id: bannerId },
                            success: function (response) {
                                if (response.success) {
                                    console.log("項目已成功刪除");
                                    deleteButton.closest("tr").remove();
                                    $('#Banner-table').DataTable().ajax.reload();
                                } else {
                                    console.log("刪除項目失敗。");
                                }
                            },
                            error: function (error) {
                                console.log("刪除項目時發生錯誤：", error);
                            }
                        });
                    }
                });
            });
        });
    </script>
}

