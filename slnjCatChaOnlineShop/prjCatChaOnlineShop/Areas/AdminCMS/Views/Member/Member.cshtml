                    $('#phoneNumber').text("電話：" + data.data.phoneNumber);
                    $('#address').text("地址：" + data.data.address);
                    $('#registrationTime').text("註冊日期：" + data.data.registrationTime);
                    $('#lastLoginTime').text("最後登入：" + data.data.lastLoginTime);

