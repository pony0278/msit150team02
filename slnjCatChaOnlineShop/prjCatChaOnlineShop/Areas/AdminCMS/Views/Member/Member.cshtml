            // 將日期格式化為YYYY-MM-DD格式
            var formattedDate = currentDate.toISOString().split('T')[0];
            // 設置MaxDate属性
            $("#CreatBirthday").attr("max", formattedDate);
            $('#birthday_edit').attr("max", formattedDate);

            // 監聽輸入事件，攔截輸入過程
            $("#CreatBirthday, #birthday_edit").on("input", function () {
                var inputDate = new Date($(this).val());

                if (inputDate > currentDate) {
                    // 如果輸入的日期大於當前日期，重置輸入框的值為最大日期
                    $(this).val(formattedDate);
                }
            });

            //==============密碼眼睛
            $('#togglePassword').click(function () {
                if ($('#CreatMemberPassword').attr('type') === 'password') {
                    $('#CreatMemberPassword').attr('type', 'text');
                } else {
                    $('#CreatMemberPassword').attr('type', 'password');
                }
            });

            function validateEmail(input, error) {
                input.on("blur", function () {
                    if (!isValidEmail(input.val())) {
                        error.text("Email格式不正確");
                        isVaild = false;
                    } else {
                        error.text("");
                        isVaild = true;
                    }
                });
            }

            function validatePassword(input, error) {
                input.on("blur", function () {
                    if (!isValidPassword(input.val())) {
                        error.text("密碼需包含至少一個英文字母和一個數字，且長度至少8字元");
                        isVaild = false;
                    } else {
                        error.text("");
                        isVaild = true;
                    }
                });
            }

            function validateCheckPassword(input, error) {
                input.on("blur", function () {
                    if (!isValidCheckPassword(input.val())) {
                        error.text("密碼與確認密碼不相符");
                        isVaild = false;
                    } else {
                        error.text("");
                        isVaild = true;
                    }
                });
            }

            //==================驗證帳號信箱格式是否正確
            function isValidEmail(email) {
                const emailRegex = /^([\w-\.]+@@([\w-]+\.)+[\w-]{2,4})?$/;
                return emailRegex.test(email);
            }

            //==================驗證密碼格式是否正確
            function isValidPassword(password) {
                // 包含至少一個英文字母和一個數字和至少8字元
                if (password.length < 8) {
                    return false;
                } else {
                    const containsLetter = /[a-zA-Z]/.test(password);
                    const containsNumber = /\d/.test(password);

                    return containsLetter && containsNumber;
                }
            }

            //==================驗證確認密碼與密碼兩者是否相符
            function isValidCheckPassword(check_password) {
                var pwd = $('#CreatMemberPassword').val();

                if (check_password !== pwd) {
                    return false;
                } else {
                    return true;
                }
            }

            validateEmail($("#CreatMemberAccount"), $("#error1"));
            validateEmail($("#CreatEmail"), $("#error2"));
            validatePassword($("#CreatMemberPassword"), $("#error3"));
