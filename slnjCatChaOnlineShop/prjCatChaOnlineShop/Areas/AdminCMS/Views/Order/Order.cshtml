@{
    ViewData["Title"] = "ShopOrder";
    Layout = "~/Areas/AdminCMS/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{
    <style>
        .time-colored-text {
            color: #de9e4f
        }

        /*產品明細表格RWD*/
        .rwd-table {
		 	 background: #fff;
		 	 overflow: hidden;
			}

			.rwd-table tr:nth-of-type(2n){
			  background: #eee;
			}
			.rwd-table th, 
			.rwd-table td {
			  margin: 0.5em 1em;
			}
			.rwd-table {
			  min-width: 100%;
			}

			.rwd-table th {
			  display: none;
			}

			.rwd-table td {
			  display: block;
			}

			.rwd-table td:before {
			  content: attr(data-th) " : ";
			  font-weight: bold;
			  width: 6.5em;
			  display: inline-block;
			}

			.rwd-table th, .rwd-table td {
			  text-align: left;
			}

			.rwd-table th, .rwd-table td:before {
                    color: #b95756;
			  font-weight: bold;
			}

			@@media (min-width: 480px) {
			  .rwd-table td:before {
			    display: none;
			  }
			 .rwd-table th, .rwd-table td {
			    display: table-cell;
			    padding: 0.25em 0.5em;
			  }
			  .rwd-table th:first-child, 
			  .rwd-table td:first-child {
			    padding-left: 0;
			  }
			  .rwd-table th:last-child, 
			  .rwd-table td:last-child {
			    padding-right: 0;
			  }
			   .rwd-table th, 
			   .rwd-table td {
			    padding: 1em !important;
			  }
            .rwd-table tr:nth-of-type(2n) {
                background: #FFF !important;
            }
			}
    </style>
}

<div class="middle-content">

    <h2 class="mt-3">商城訂單管理</h2>

    <div class="search-row row mt-3 mb-3">
        <div class="row align-items-center mb-3">
            訂單成立日期：
            <input type="text" class="form-control w-25" name="dates" />
        </div>
        <div class="row align-items-center mb-3">
            付款方式：
            <select class="form-select w-25" id="payList">
                <option value="" selected>全部訂單</option>
                <option value="取貨付款">取貨付款</option>
                <option value="信用卡">信用卡</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            配送方式：
            <select class="form-select w-25" id="deliveryList">
                <option value="" selected>全部訂單</option>
                <option value="7-Eleven">7-Eleven</option>
                <option value="全家">全家</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            訂單狀態：
            <select class="form-select w-25" id="statusList">
                <option value="" selected>全部訂單</option>
                <option value="">處理中</option>
                <option value="">已完成</option>
            </select>
        </div>
        <div class="row align-items-center mb-3">
            關鍵字搜尋：
            <input type="text" class="form-control" style="width:25%;" />
        </div>

        <button type="button" class="keyword_input col-xl-1">查詢</button>
    </div>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="order-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <th>訂單編號</th>
                            <th>會員ID</th>
                            <th>訂購會員</th>
                            <th>收件人</th>
                            <th>收件人電話</th>
                            <th>付款方式</th>
                            <th>運輸方式</th>
                            <th>成立日期</th>
                            <th>最後更新</th>
                            <th>狀態</th>
                            <th>詳細資料</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                </table>
                <!--表格-->
                <!--編輯彈出視窗-->
                <div class="modal fade" id="EditModalToggle" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!--內容表單-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>ID</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label>訂購人</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label>收件人</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label>收件地址</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label>收件電話</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="col-md-6">
                                        <label>付款方式</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label>配送類別</label>
                                        <select name="" id="" class="form-select">
                                            <option value="">7-Eleven</option>
                                            <option value="">全家</option>
                                            <option value="">萊爾富</option>
                                            <option value="">OK</option>
                                            <option value="">宅配到府</option>
                                        </select>
                                    </div>

                                    <div class="col-md-6">
                                        <label>狀態</label>
                                        <select name="" id="" class="form-select">
                                            <option value="">處理中</option>
                                            <option value="">配送中</option>
                                            <option value="">已完成</option>
                                            <option value="">已取消</option>
                                        </select>
                                    </div>

                                    <button type="submit" class="mt-3 btn btn-primary btn-block"
                                            style="width: 100%;">
                                        儲存
                                    </button>
                                </div>
                                <!--內容表單-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--編輯彈出視窗-->
                <!---詳細資料model-->
                <div class="modal fade" id="DetailModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-lg modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title bg-dark text-white" id="exampleModalToggleLabel">
                                    詳細資訊
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <nav>
                                    <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                        <button class="nav-link active" id="nav-home-tab"
                                                data-bs-toggle="tab" data-bs-target="#nav-home" type="button"
                                                role="tab">
                                            訂購人 / 收件人資料
                                        </button>
                                        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab"
                                                data-bs-target="#nav-profile" type="button"
                                                role="tab">
                                            訂單明細
                                        </button>
                                    </div>
                                </nav>
                                <div class="tab-content" id="nav-tabContent">
                                    <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                         aria-labelledby="nav-home-tab">
                                        <div class="row">
                                            <div class="col-12 col-lg-6" style="border-right: 1px solid #000;">
                                                <h5><strong>訂購人(會員)</strong></h5>
                                                <p id="memberId"></p>
                                                <p id="name"></p>
                                                <p id="memberAccount"></p>
                                                <p id="gender"></p>
                                                <p id="birthday"></p>
                                                <p id="email"></p>
                                                <p id="phoneNumber"></p>
                                                <p id="address"></p>
                                                <p id="registrationTime"></p>
                                                <p id="lastLoginTime"></p>
                                                <p id="memberStatus"></p>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <h5><strong>收件人</strong></h5>
                                                <p id="recipientName"></p>
                                                <p id="recipientPhone"></p>
                                                <p id="recipientAddress"></p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="nav-profile" role="tabpanel">
                                        <div class="row">
                                            <div class="col-12 col-lg-6">
                                                <p id="orderId"></p>
                                                <p id="paymentMethod"></p>
                                                <p id="shippment"></p>
                                                <p id="totalPrice"></p>
                                                <p id="lastUpdateTime"></p>
                                            </div>
                                            <div class="col-12 col-lg-6">
                                                <p id="orderCreationDate"></p>
                                                <p id="shippingMethod"></p>
                                                <p id="couponContent"></p>
                                                <p id="orderStatus"></p>
                                            </div>
                                            <div class="col-12">
                                                <!--下拉卷軸-->
                                                <button class="create_btn" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                                    訂購產品明細
                                                </button>
                                                <div class="collapse show" id="collapseExample">
                                                    <div class="card card-body">
                                                        <div id="ProductTotalContainer"></div>
                                                    </div>
                                                </div>
                                                <!--下拉卷軸-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->
            </div>
        </div>
    </div>

    @section Scripts{
        <!--日期插件-->
        <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
        <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

        <script>
            //日期插件
            $('input[name="dates"]').daterangepicker();

            //-------------------------------------------------
            $(document).ready(function () {
                $.ajax({
                    url: '@Url.Action("ShowOrderTotal", "Order")',
                    type: 'GET',
                    success: function (data) {
                        console.log(data);
                    },
                    error: function () {
                        console.log("error:" + error);
                    }
                });

                //==================datatable
                $('#order-table').DataTable({
                    "ajax": '@Url.Action("ShowOrderTotal", "Order")',

                    "columns": [
                        { data: 'orderId' },
                        { data: 'memberId' },
                        { data: 'name' },
                        { data: 'recipientName' },
                        { data: 'recipientPhone' },
                        { data: 'paymentMethodName' },
                        {
                            data: 'shippingMethodName',
                            render: function (data, type, row, meta) {
                                if (data === null) {
                                    return "無";
                                }
                                return data; // 如果不是 null，則返回原始值
                            }
                        },
                        {
                            data: 'orderCreationDate',
                            render: function (data, type, row, meta) {
                                if (type === 'display' || type === 'filter') {
                                    var date = new Date(data);
                                    var year = date.getFullYear().toString(); // 年份
                                    var month = (date.getMonth() + 1).toString().padStart(2, '0'); // 月份並補0
                                    var day = date.getDate().toString().padStart(2, '0'); // 日期並補0
                                    var hours = date.getHours().toString().padStart(2, '0'); // 小時並補0
                                    var minutes = date.getMinutes().toString().padStart(2, '0'); // 分鐘並補0
                                    var seconds = date.getSeconds().toString().padStart(2, '0'); // 秒鐘並補0

                                    return `${year}-${month}-${day} <span class="time-colored-text">${hours}:${minutes}:${seconds}</span>`;
                                }
                                return data;
                            }
                        },
                        {
                            data: 'lastUpdateTime',
                            render: function (data, type, row, meta) {
                                if (type === 'display' || type === 'filter') {
                                    var date = new Date(data);
                                    var year = date.getFullYear().toString(); // 年份
                                    var month = (date.getMonth() + 1).toString().padStart(2, '0'); // 月份並補0
                                    var day = date.getDate().toString().padStart(2, '0'); // 日期並補0
                                    var hours = date.getHours().toString().padStart(2, '0'); // 小時並補0
                                    var minutes = date.getMinutes().toString().padStart(2, '0'); // 分鐘並補0
                                    var seconds = date.getSeconds().toString().padStart(2, '0'); // 秒鐘並補0

                                    return `${year}-${month}-${day} <span class="time-colored-text">${hours}:${minutes}:${seconds}</span>`;
                                }
                                return data;
                            }
                        },
                        { data: 'statusName' },
                        {
                            data: null, // 這裡設置為 null，因為我們會在 render 中創建按鈕
                            render: function (data, type, row, meta) {
                                // return '<button class="detail_input" data-bs-toggle="modal" href="#DetailModalToggle" role="button" data-memberid="' + row.memberId + '">詳細資料</button>';
                                return '<button class="detail_input" data-bs-toggle="modal" href="#DetailModalToggle" role="button" data-memberid="' + row.memberId + '" data-orderid="' + row.orderId + '">詳細資料</button>';
                            }
                        },
                        {
                            data: null,
                            render: function (data, type, row, meta) {
                                var editButton = '<button class="btn" data-bs-toggle="modal" href="#EditModalToggle" role="button"><i class="fas fa-edit"></i></button>';
                                return editButton;
                            }
                        },
                    ],
                    "paging": true, //分頁功能
                    responsive: true, //RWD
                    "searching": false, //隱藏搜尋框
                });

                //==================按下「詳細資料」按鈕的點擊事件處理
                $('#order-table').on('click', '.detail_input', function () {
                    var memberId = $(this).data('memberid'); // 從按鈕的 data-memberid 屬性中獲取 memberId
                    var orderId = $(this).data('orderid');
                    // console.log('Clicked on "詳細資料" button for memberId:', memberId);

                    //----------------AJAX
                    $.ajax({
                        url: '@Url.Action("GetOrderDetails", "Order")',
                        type: 'GET',
                        data: { memberId: memberId, orderId: orderId }, // id=>這個名稱要確保欄位跟controller的參數名稱相同（傳遞會員ID或其他必要的參數）
                        success: function (data) {
                            console.log(data.data);

                            //============訂購人(會員)基本資料
                            $('#memberId').text("ID：" + data.data.memberInfo.memberId);
                            $('#name').text("姓名：" + data.data.memberInfo.name);
                            $('#memberAccount').text("帳號：" + data.data.memberInfo.memberAccount);
                            $('#gender').text("性別：" + data.data.memberInfo.gender);
                            $('#birthday').text("生日：" + data.data.memberInfo.birthday);
                            $('#email').text("E-mail：" + data.data.memberInfo.email);
                            $('#phoneNumber').text("電話：" + data.data.memberInfo.phoneNumber);
                            $('#address').text("地址：" + data.data.memberInfo.address);
                            $('#registrationTime').text("註冊日期：" + data.data.memberInfo.registrationTime);
                            $('#lastLoginTime').text("最後登入：" + data.data.memberInfo.lastLoginTime);

                            if (data.data.memberInfo.memberStatus == true) {
                                $('#memberStatus').text("會員狀態：開放");
                            } else {
                                $('#memberStatus').text("會員狀態：凍結");
                            }

                            //============收件人資料
                            $('#recipientName').text("收件人：" + data.data.orderTotal.recipientName);
                            $('#recipientPhone').text("收件人電話：" + data.data.orderTotal.recipientPhone);
                            $('#recipientAddress').text("收件地址：" + data.data.orderTotal.recipientAddress);

                            //============訂單明細
                            $('#orderId').text("訂單編號：" + data.data.orderTotal.orderId);
                            $('#paymentMethod').text("付款方式：" + data.data.paymentMethod);

                            if (data.data.shippment == null) {
                                $('#shippment').text("運費：無");
                            } else {
                                $('#shippment').text("運費：" + data.data.shippment);
                            }

                            if (data.data.couponContent == null) {
                                $('#couponContent').text("優惠券內容：無");
                            } else {
                                $('#couponContent').text("優惠券內容：" + data.data.couponContent);
                            }

                            if (data.data.couponContent == null) {
                                $('#shippingMethod').text("配送方式：無");
                            } else {
                                $('#shippingMethod').text("配送方式：" + data.data.shippingMethod);
                            }
                            
                            $('#lastUpdateTime').text("最後更新：" + data.data.orderTotal.lastUpdateTime);
                            $('#orderCreationDate').text("訂單成立日期：" + data.data.orderTotal.orderCreationDate);
                            // $('#totalPrice').text("總金額：待補");
                            $('#orderStatus').text("訂單狀態：" + data.data.orderStatus);

                            //===========訂購產品明細
                            var PTContainer = $("#ProductTotalContainer");
                            var totalPrice = 0; // 用於累加小計，秀出總金額
                            PTContainer.html(""); // 使用html()方法來重置容器內容

                            if (data.data.orderDetails.length != 0) {
                                var tableHTML = `
                    <table class="rwd-table">
                        <thead style='border-bottom: 1px solid #ddd;'>
                            <tr>
                                <th>項次</th>
                                <th>商品ID</th>
                                <th>名稱</th>
                                <th>數量</th>
                                <th>單價</th>
                                <th>小計</th>
                            </tr>
                        </thead>
                        <tbody>
                `;

                                for (var i = 0; i < data.data.orderDetails.length; i++) {
                                    var item = data.data.orderDetails[i];
                                    var orderNumber = i + 1;

                                    var subTotal = item.product.productPrice * item.productQuantity; // 計算小計
                                    totalPrice += subTotal; // 將小計累加到總金額中

                                    tableHTML += `
                        <tr>
                                                    <td data-th="項次">${orderNumber}</td>
                                                    <td data-th="商品ID">${item.product.productId}</td>
                                                    <td data-th="名稱">${item.product.productName}</td>
                                                    <td data-th="數量">${item.productQuantity}</td>
                                                    <td data-th="單價">${item.product.productPrice}</td>
                                                                            <td data-th="小計">${subTotal}</td>
                        </tr>
                    `;
                                }

                                tableHTML += `
                        </tbody>
                    </table>
                `;

                                PTContainer.html(tableHTML);

                                // 將總金額填入指定的元素中
                                $("#totalPrice").text(`總金額：NT＄${totalPrice.toLocaleString()} (未含運費)`);
                            } else {
                                PTContainer.text("沒有可顯示的產品明細");
                            }
                        },
                        error: function (error, a, b) {
                            console.log(error);
                            console.log(a);
                            console.log(b);
                            console.log("Error retrieving order details.");
                        }
                    });
                });
            });
        </script>
    }
