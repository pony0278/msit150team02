                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="EditModalToggleLabel">編輯 Edit</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <!--內容表單-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>ID</label>
                                            <input type="text" class="form-control" readonly disabled id="edit_id" name="ProductId">
                                        </div>
                                        <div class="col-md-6">
                                            <label>名稱</label>
                                            <input type="text" class="form-control" id="edit_name" name="ProductName">
                                        </div>
                                        <div class="col-md-6">
                                            <label>類別</label>
                                            <select class="form-control" id="edit_category" name="ProductCategory">
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label>描述</label>
                                            <input type="text" class="form-control" id="edit_description" name="ProductDescription">
                                        </div>
                                        <div class="col-md-6">
                                            <label>價格</label>
                                            <input type="text" class="form-control" id="edit_price" name="ProductPrice ">
                                        </div>

                                        <div class="col-md-6">
                                            <label>已被購買數量</label>
                                            <input type="text" class="form-control" id="edit_purchasedquantity" name="PurchasedQuantity">
                                        </div>
                                        <div class="col-md-6">
                                            <label>剩餘數量</label>
                                            <input type="text" class="form-control" id="edit_remainingquantity" name="RemainingQuantity">
                                        </div>
                                        <div class="col-md-6">
                                            <label>抽獎機率</label>
                                            <input type="text" class="form-control" id="edit_rate" name="LotteryProbability">
                                        </div>
                                        <div class="col-md-12">
                                            <label>圖片</label>
                                            <input type="file" class="form-control" id="edit_image" name="ProductImage">
                                        </div>

                                        <button type="submit" class="mt-3 btn btn-primary btn-block  EditProduct_Save" id="EditProduct_Save"
                                                style="width: 100%;">
                                            儲存
                                        </button>
                                    </div>
                                    <!--內容表單-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--編輯彈出視窗-->
                </table>
                <!--表格-->
            </div>
        </div>
    </div>

</div>

