@{
    ViewData["Title"] = "Salon";
    Layout = "~/Areas/AdminCMS/Views/Shared/CMS_Layout.cshtml";
}

@section Styles{
}

<div class="middle-content">

    <h2 class="mt-3">美容訂單管理</h2>

    <div class="container-fluid mt-4 mb-3">
        <div class="row align-items-center mb-2">
            預約日期區間：
            <input type="text" class="form-control w-25" name="dates" />
        </div>
        <div class="row align-items-center mb-2">
            時段篩選：
            <select class="form-select w-25" id="statusList">
                <option value="" selected>全部訂單</option>
                <option value="">14:00~15:00</option>
                <option value="">15:00~16:00</option>
                <option value="">16:00~17:00</option>
            </select>
        </div>
        <div class="row align-items-center mb-2">
            狀態篩選：
            <select class="form-select w-25" id="deliveryList">
                <option value="" selected disabled>全部訂單</option>
                <option value="">預約成功</option>
                <option value="">預約失敗</option>
                <option value="">已完成</option>
            </select>
        </div>
        <button type="button" class="btn btn-primary">查詢</button>
    </div>


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="salon-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>顧客訂購ID</th>
                            <th>會員ID</th>
                            <th>訂單編號</th>
                            <th>預約時間</th>
                            <th>服務數量(?)</th>
                            <th>服務貓咪編號</th>
                            <th>服務費用(?)</th>
                            <th>狀態</th>
                            <th>完成時間(?)</th>
                            <th>詳細資料</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>001</td>
                            <td>1</td>
                            <td>20230812001</td>
                            <td>2023/08/12 14:00~15:00</td>
                            <td>1 隻貓咪</td>
                            <td>服務貓咪編號</td>
                            <td>1000</td>
                            <td>預約成功</td>
                            <td>2023/08/16 17:37:15</td>
                            <td>
                                <a href="#">
                                    <button class="btn btn-success" data-bs-toggle="modal"
                                            href="#orderDetailModalToggle" role="button">
                                        訂單明細
                                    </button>
                                </a>
                            </td>
                            <td>
                                <a href="#">
                                    <button class="btn" data-bs-toggle="modal"
                                            href="#exampleModalToggle" role="button">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!--表格-->
                <!---詳細資料model-->
                <div class="modal fade" id="orderDetailModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title bg-dark text-white" id="exampleModalToggleLabel">
                                    訂單明細
                                </h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-12">
                                        <p>顧客訂購ID：001</p>
                                        <p>會員ID：1</p>
                                        <p>會員姓名：王小明</p>
                                        <p>訂單編號：20230812001</p>
                                        <p>預約時間：2023/08/12 14:00~15:00</p>
                                        <p>服務貓咪編號：_________(此欄待確認)</p>
                                        <p>服務數量：1隻貓咪</p>
                                        <p>服務費用：1000元</p>
                                        <p>服務狀態：尚未報到</p>
                                        <p>完成時間：未完成</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!---詳細資料model-->
                <!--編輯彈出視窗-->
                <div class="modal fade" id="exampleModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!--內容表單-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>ID</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">

                                        <label>顧客訂購ID</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label>會員ID</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-md-6">
                                        <label>訂單ID</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="col-12">
                                        <label>預約日期</label>
                                        <input type="date" class="form-control" />
                                    </div>
                                    <div class="col-12">
                                        <label>預約時間</label>
                                        <select name="" id="" class="form-select">
                                            <option value="">14:00-15:00</option>
                                            <option value="">15:00-16:00</option>
                                            <option value="">16:00-17:00</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label>服務貓咪編號</label>
                                        <input type="text" class="form-control">
                                    </div>

                                    <div class="col-md-6">
                                        <label>狀態</label>
                                        <select name="" id="" class="form-select">
                                            <option value="">處理中</option>
                                            <option value="">配送中</option>
                                            <option value="">已完成</option>
                                            <option value="">已取消</option>
                                        </select>
                                    </div>

                                    <button type="submit" class="mt-3 btn btn-primary btn-block"
                                            style="width: 100%;">
                                        儲存
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--編輯彈出視窗-->
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

    <script>
        $('input[name="dates"]').daterangepicker();
        $(document).ready(function () {
            var table = $('#salon-table').DataTable({
                responsive: true,
            });
        });
    </script>
    }

