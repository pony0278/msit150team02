@{
    ViewData["Title"] = "AdminManage";
    Layout = "~/Areas/AdminCMS/Views/Shared/CMS_Layout.cshtml";
}


@section Styles{

}

<div class="middle-content">

    <div class="row align-items-center">
        <div class="col-6">
            <h2 class="mt-3">管理員</h2>
        </div>
        <div class="col-6 text-end mt-3">
            <button class="create_btn" data-bs-toggle="modal" href="#addAdminModalToggle" role="button">新增管理員</button>
        </div>
    </div>


    <!---新增管理員 modal-->
    <div class="modal fade" id="addAdminModalToggle" aria-hidden="true"
         aria-labelledby="exampleModalToggleLabel" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalToggleLabel">新增管理員</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <!-- <label>[Admin ID]：</label> -->
                            <input type="hidden" class="form-control" disabled
                                   readonly>
                        </div>

                        <div class="form-group">
                            <label>管理員姓名：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>帳號：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>密碼：</label>
                            <input type="text" class="form-control">
                        </div>

                        <div class="form-group">
                            <label>確認密碼：</label>
                            <input type="text" class="form-control">
                        </div>

                        <button class="btn btn-danger btn-block"
                                style="width: 100%;">
                            儲存
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!---新增管理員 modal-->


    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-12">
                <!--表格-->
                <table id="admin-table" class="table table-striped nowrap" style="width:100%">
                    <thead>
                        <tr>
                            <!-- <th>序號</th> -->
                            <th>ID</th>
                            <th>姓名</th>
                            <th>帳號</th>
                            <th>最後登入</th>
                            <th>編輯</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <!-- <td>1</td> -->
                            <td>1</td>
                            <td>管理員1</td>
                            <td>admin@yahoo.com.tw</td>
                            <td>2023-06-29</td>
                            <td>
                                <a href="#">
                                    <button class="btn" data-bs-toggle="modal"
                                            href="#exampleModalToggle" role="button">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <!--表格-->
                <!--編輯彈出視窗-->
                <div class="modal fade" id="exampleModalToggle" aria-hidden="true"
                     aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalToggleLabel">編輯 Edit</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <!--內容表單-->
                                <form>
                                    <div class="form-group">
                                        <label>ID</label>
                                        <input type="text" class="form-control" readonly disabled>
                                    </div>
                                    <div class="form-group">
                                        <label>姓名</label>
                                        <input type="text" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>帳號</label>
                                        <input type="email" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>密碼</label>
                                        <input type="password" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label>確認密碼</label>
                                        <input type="password" class="form-control">
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-block" style="width: 100%;">儲存</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!--編輯彈出視窗-->

            </div>
        </div>
    </div>

</div>


