                        //} else {
                        //    throw new Error('Network response was not ok');
                        //}
                    })
                //.then(function (data) {
                //        console.log('indata')
                //        console.log(data)
                //        //console.log("Response data:", data);
                //    if (data.ErrMsg) {
                //        document.querySelector('#ErrorMsg').innerHTML = data.ErrMsg;
                //    } else {
                //        alert(data.ResultMsg);
                //        location.href = '@Url.Content("~/MemberLogin/Login")';
                //    }
                //})
                //.catch(function (error) {
                //    document.querySelector('#ErrorMsg').innerHTML = "發生錯誤: " + error.message;
                //});
            }
            var topAnnouncement = $('.formain-topSpan');
            console.log(topAnnouncement);
            $.ajax({
                url: '@Url.Action("GetTopAnnouncement","ProductApi")',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    if (data.success) {
                        topAnnouncement.text(data.message);
                    }
                    else {
                        topAnnouncement.text(data.messageWelcome);
                    }
                },
                error: function () {
                    console.log('error');
                }
            });
        });

    </script>

