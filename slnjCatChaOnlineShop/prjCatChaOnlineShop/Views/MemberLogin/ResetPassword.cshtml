    <script>
        $(document).ready(function () {
            $('#resetPwdBtn').click(function () {
                DoResetPwd()
            })

            function DoResetPwd() {
                var form = document.forms["resetPwdForm"];
                var newPwd = form.elements["NewUserPwd"].value;
                var checkPwd = form.elements["CheckUserPwd"].value;

                if (newPwd !== checkPwd) {
                    document.querySelector('#ErrorMsg').innerHTML = "密碼不相符";
                    return;
                }

                //組合資料
                var postData = {
                    NewUserPwd: newPwd,
                    CheckUserPwd: checkPwd,
                };


                var requestOptions = {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(postData)
                };

                fetch('@Url.Action("DoResetPwd", "MemberLogin")', requestOptions)
                    .then(function (response) {
                        console.log('get response');
                        console.log(response);
                        if (response.ok == true) {
                            alert('更新成功');
                            window.location.href = '@Url.Content("~/MemberLogin/Login")';
                        }


                        return true; // 成功時返回 true
                        //if (response.ok) {
                        //        console.log('in response.ok')
