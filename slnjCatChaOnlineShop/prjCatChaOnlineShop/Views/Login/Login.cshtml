
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Security-Policy" content="upgrade-insecure-requests" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/css/responsive.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/custom.css">
    <!--myCss-->
    <link rel="stylesheet" href="~/css/myCss.css">
</head>
<body>
    <!--會員登入互動視窗Start-->
    <div class="modal fade" id="loginModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
         aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="d-flex align-items-center modal-header">
                    <h5 class=" modal-title" id="loginModalLabel">登入</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                            aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mt-2 icon d-flex align-items-center justify-content-center">
                        <img src="~/images/CatCha/profile_Icon.png">
                    </div>
                    <div class="row justify-content-md-center">
                        <div class="col-10">
                            <div class="container-fluid">
                                <form class="needs-validation" novalidate>
                                    <div class="row">
                                        <div>
                                            <label for="login-name">電子信箱：</label>
                                            <input type="text" class="form-control" id="login-name"
                                                   placeholder="email" required>
                                            <div class="invalid-feedback"> 請輸入電子信箱</div>
                                        </div>
                                        <div>
                                            <label for="login-password">密碼：</label>
                                            <input type="password" class="form-control" id="login-password"
                                                   placeholder="password" required>
                                            <div class="invalid-feedback"> 請輸入密碼 </div>
                                        </div>
                                    </div>

                                    <div class="d-grid gap-2 mt-3">
                                        <button class="btn btn-primary" type="button">登入</button>
                                    </div>
                                    <div>
                                        <div class="d-flex justify-content-between align-items-center mb-4 mt-2">
                                            <div class="d-flex justify-content-between">
                                                <div class="form-check form-switch">
                                                    <input class="form-check-input" type="checkbox"
                                                    @* role="switch" *@id="loginCheckDefault">
                                                    <label class="form-check-label"
                                                           for="loginCheckDefault">記住我</label>
                                                </div>
                                            </div>
                                            <div class=" d-flex justify-content-end">
                                                <a href="#" class="forget_btn link-color link-primary "
                                                   data-bs-toggle="modal"
                                                   data-bs-target="#forgotPasswordModal">忘記密碼?</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer row gy-4"></div>
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-light" type="button">加入會員</button>
                                    </div>
                                    <div class="mt-2 text-center">
                                        <a>或用其他社群登入</a>
                                    </div>
                                    <div class="mt-3 text-center">
                                        <a href="#">
                                            <span><img src="~/images/CatCha/fb_icon.png"></span>
                                        </a>
                                        <a href="#">
                                            <span><img src="~/images/CatCha/google_icon.png"></span>
                                        </a>
                                        <a href="#">
                                            <span> <img src="~/images/CatCha/twitter_icon.png"></span>
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--會員登入視窗End-->
    <!--忘記密碼視窗Start-->
    <div class="modal fade" id="forgotPasswordModal" data-bs-backdrop="static" data-bs-keyboard="false"
         tabindex="-1" aria-labelledby="forgotPasswordBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="d-flex align-items-center modal-header">
                    <h5 class=" modal-title" id="forgotPasswordModalLabel">忘記密碼</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mt-2 icon d-flex align-items-center justify-content-center">
                        <img src="~/images/CatCha/3671803_closed_lock_icon.png">
                    </div>
                    <div class="row">
                        <div class="text-center">
                            <h2 class="mt-3">忘記密碼了嗎?</h2>
                            <a>請填寫註冊時的電子信箱</a>
                            <br>
                            <a>我們將會寄送密碼修改確認信給您</a>
                        </div>
                    </div>
                    <div class="mt-3 row justify-content-md-center">
                        <div class="col-10">
                            <div class="">
                                <form class="needs-validation" novalidate>
                                    <div class="row ">
                                        <div class="mb-3">
                                            <label for="login-name">電子信箱：</label>
                                            <input type="text" class="form-control" id="login-name"
                                                   placeholder="email" required>
                                            <div class="invalid-feedback"> 請輸入電子信箱</div>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 mt-3">
                                        <button class="mb-3 btn btn-primary" type="button">寄送密碼修改信</button>
                                    </div>
                                </form>
                            </div>
                            <!--<div class="modal-footer" class="row gy-4"></div>-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--忘記密碼視窗End-->
    <!-- ALL JS FILES -->
    <!--引用Bundle，這樣nav導覽與頁籤就可以使用-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script>
    <!--引用分離(Separate)-->
