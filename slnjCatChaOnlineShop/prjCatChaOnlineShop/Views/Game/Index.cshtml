@{
    ViewData["Title"] = "Index";
}

<!-- 遊戲相關 CSS -->
@section Styles{
    <link href="~/css/game/Mainstyle.css" rel="stylesheet" />
    <link href="~/css/game/gameinstructions.css" rel="stylesheet" />
    <link href="~/css/game/gachabutton.css" rel="stylesheet" />
    <link href="~/css/game/confirmWin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,200,0,0" />
    <style>
        #sidebar {
            position: fixed;
            top: 25%;
            right: -400px;
        }

        #sidebar-inside {
            position: relative;
        }

        .toggle {
            position: absolute;
            top: 25%;
            right: 100%;
            z-index: 999;
        }

            .toggle button {
                border: 0.5px solid orange;
                border-radius: 10px 0 0 10px;
                background-color: #4CAF50;
                color: whitesmoke;
            }

        .chat-container {
            position: relative;
            width: 400px;
            margin: auto;
            border: 1px solid #ccc;
            border-radius: 10px;
            overflow: hidden;
            z-index: 9999;
            background-color: whitesmoke;
            opacity: 1;
        }

        .chat-header {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            text-align: center;
        }
        .chat-header h2{
            color:white;
        }

        .chat-messages {
            position: relative;
            height: 300px;
            overflow-y: scroll;
            padding: 10px;
            border-bottom: 1px solid #ccc;
            display: flex;
            flex-direction: column-reverse;
            z-index: 999;
        }

        .message {
            padding: 5px;
            margin: 5px 0;
            z-index: 999;
        }

        .username {
            font-weight: bold;
            z-index: 999;
        }

        .chat-input {
            display: flex;
            justify-content: space-between;
            padding: 10px;
            background-color: #f1f1f1;
        }

            .chat-input input {
                width: 80%;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                z-index: 999;
            }

            .chat-input button {
                padding: 10px 20px;
                border: none;
                border-radius: 5px;
                background-color: #4CAF50;
                color: white;
                z-index: 999;
            }

        .message.own-message {
            text-align: right;
            color:purple;
            border-radius: 10px;
            margin: 5px;
            font-weight:900;
        }

        .message.other-message {
            text-align: left;
            color: orange;
            border-radius: 10px;
            margin: 5px;
        }
    </style>
}

<!-- Start 遊戲畫面 -->
<div class="canvas-container" @*style="display:none;"*@>
    <div id="Probability" style="display:none">
        <h2 style="text-align:center;">轉蛋機率表(經機率縮放後)</h2>
        <div id="ItemsProbability" >
        </div>

    </div>
    <div class="gamelayer">
        <canvas id="Canvaslobby"></canvas>
        <!-- Start j轉蛋 -->
