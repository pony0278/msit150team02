<!-- 開始預約寵物美容按鈕 -->
<div class="container mt-3">
    <div class="row">
        <div class="col-lg-12 booking justify-content-center text-center align-items-center hvr-pulse shadow rounded"
             data-bs-toggle="modal" data-bs-target="#bookingModal">
            <p>點我立即預約</p>
        </div>
    </div>
</div>
<!-- 結束預約寵物美容按鈕 -->
<!-- 開始預約寵物美容彈跳視窗 -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg forModal">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">立即預約</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container mt-1">
                    <div class="row">
                        <div class="col-lg-9">
                            <div class="calendar">
                                <div class="month justify-content-center">
                                    <div class="date">
                                        <h1></h1>
                                        <p></p>
                                    </div>
                                </div>
                                <div class="weekdays">
                                    <div>日</div>
                                    <div>一</div>
                                    <div>二</div>
                                    <div>三</div>
                                    <div>四</div>
                                    <div>五</div>
                                    <div>六</div>
                                </div>
                                <div class="days"></div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <form class="bookingForm">
                                <label for="pickDate" class="form-label">選擇日期</label>
                                <input type="text" class="form-control disabled" id="pickDate" readonly />
                                <label for="countCat" class="form-label">預約貓數</label>
                                <input type="text" class="form-control" id="countCat">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="" id="home">
                                    <label class="form-check-label" for="home">
                                        是否需要到府接送
                                    </label>
                                </div>
                                <button type="submit" class="btn btn-danger submitBtn">送出</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 結束預約寵物美容彈跳視窗 -->
