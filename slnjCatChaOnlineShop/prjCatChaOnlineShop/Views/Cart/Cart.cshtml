                                                                }

                                                            
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-2 col-sm-6 col-6 d-flex flex-row flex-lg-column flex-xl-row text-nowrap">
                                        <div class="mt-2">
                                            <span>數量</span>
                                            <select id="#SelectedQuantity" class="form-select me-4 for-count-select">

                                                <option>@item.c數量</option>


                                            </select>
                                        </div>
                                        <div class="mt-2 ml-5">
                                            <p class=" mb-0">價格</p>
                                            <span class="h6">$ @item.c小計</span><br />
                                            <small class="text-muted text-nowrap">$ @item.cPrice</small><small>/份</small>
                                        </div>
                                    </div>
                                    <div class="col-lg col-sm-6 d-flex flex-column justify-content-center align-items-sm-center align-items-md-start align-items-lg-center align-items-xl-end mb-2">
                                        <div class="float-md-end">
                                            <a href="#" class="btn btn-light border  icon-hover-danger"> 移除</a>
                                        </div>
                                    </div>
                                    <hr class="for-hr">
                                </div>
                            }


