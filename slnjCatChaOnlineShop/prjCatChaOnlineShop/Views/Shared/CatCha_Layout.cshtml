                            <a href="#" class="nav-link dropdown-toggle arrow" data-toggle="dropdown">所有商品</a>
                            <ul class="dropdown-menu">
                                <li><a class="for-category-only" asp-controller="Index" asp-action="Shop">全部商品</a></li>
                                @foreach (var i in ViewBag.Categories)
                                {
                                    <li>
                                        <a class="for-category-only" href="/Index/Shop?categoryName=@i">
                                            <span>@i</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="ShopNews" asp-action="News">最新消息</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="About" asp-action="About">關於我們</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Membership" asp-action="Membership">會員中心</a></li>
                        <!-- Mobile view .attr-nav -->

                    </ul>
                    <ul class="d-flex d-lg-none justify-content-evenly align-items-center">
                        <li class="heart">
                            <a asp-controller="Membership" asp-action="Membership">
                                <i class="fa-regular fa-heart"></i>
                                <span class="customRule for_header_twoIcon">3</span>
                            </a>
                        </li>
                        <li class="side-menu">
                            <a asp-controller="Cart" asp-action="Cart">
                                <i class="fa-solid fa-cart-plus"></i>
                                <span class="customRule for_header_twoIcon">3</span>
                            </a>
                        </li>
                        @{
                            var userName = ViewBag.UserName as string;

                            if (!string.IsNullOrEmpty(userName))
                            {
                                <li class="Login">
                                    <a id="loginLink" asp-controller="MemberLogin" asp-action="Login">
                                        <span class="LoginText">Hello, @userName</span>
                                    </a>
                                </li>
                                <li class="Logout">
                                    <form id="logoutForm" asp-controller="MemberLogout" asp-action="Logout" method="post">
                                        <button type="submit" id="logoutButton" style="border: none; background: transparent; padding: 28px">
                                            <span class="LogoutText">登出</span>
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="Login">
                                    <a id="loginLink" asp-controller="MemberLogin" asp-action="Login">
                                        <span class="LoginText">登入/註冊</span>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>

                <!-- Desktop view .attr-nav -->
                <div class="d-none d-lg-block">
                    <ul class="d-flex navbar-top-ul align-items-center">
                        <li class="heart" id="navbar-right-heart">
                            <a asp-controller="Membership" asp-action="Membership">
                                <i class="fa-regular fa-heart"></i>
                            </a>
                        </li>
                        <li class="side-menu" id="navbar-right-side-menu">
                            <a asp-controller="Cart" asp-action="Cart">
                                <i class="fa-solid fa-cart-plus"></i>
                                <i id="for-cart-count" class="for_header_twoIcon"></i>
                                
                            </a>
                        </li>

                        @{


                            if (!string.IsNullOrEmpty(userName))
                            {
