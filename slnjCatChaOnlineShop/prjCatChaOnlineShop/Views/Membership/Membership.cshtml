        function initializeDataTableWithDateFilter(tableSelector, minDateSelector, maxDateSelector, dateIndex) {
            let minDate, maxDate;

            DataTable.ext.search.push(function (settings, data, dataIndex) {
                let min = minDate.val();
                let max = maxDate.val();
                let date = new Date(data[dateIndex]); // 使用傳入的 dateIndex

                if (
                    (min === null && max === null) ||
                    (min === null && date <= max) ||
                    (min <= date && max === null) ||
                    (min <= date && date <= max)
                ) {
                    return true;
                }
                return false;
            });

