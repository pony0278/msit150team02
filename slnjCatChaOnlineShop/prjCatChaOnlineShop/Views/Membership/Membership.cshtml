                                    <tr>
                                        <th scope="col" style="white-space: nowrap;">產品名稱: </th>
                                        <th scope="col" style="white-space: nowrap;">訂購數量: </th>
                                        <th scope="col" style="white-space: nowrap;">產品規格: </th>
                                        <th scope="col" style="white-space: nowrap;">產品售價: </th>
                                    </tr>
                                </thead>
                                <tbody class="text-left">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--彈跳視窗:申請退換貨-->
        <div class="modal fade" id="returnModal">
            <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="col d-flex justify-content-end">
                            <button type="button" class="btn btn-warning btn-sm px-2" data-bs-dismiss="modal">
                                X
                            </button>
                        </div>
                        <div class="container">
                            <form action="" id="returnForm">
                                <div class="row my-1 ml-2">
                                    <label>訂單編號: <span id="returnSpan"></span></label>
                                </div>
                                <div class="row my-1 ml-2">
                                    <div class="d-flex">
                                        <label>產品的名稱: </label>
                                        <select class="form-md-select" aria-label="Default select example" id="returnProductSelect">
                                            <option value="" selected>請選擇產品</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row my-1 ml-2">
                                    <div class="d-flex">
                                        <label>退換貨數量: </label>
                                        <input class="col-md-4" type="number" min="0" id="returnNumber">
                                    </div>
                                </div>
                                <div class="row my-1 ml-2">
