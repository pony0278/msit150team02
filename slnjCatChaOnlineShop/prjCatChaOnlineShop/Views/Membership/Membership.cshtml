<div class="all-title-box all-title-box-picture">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>會員中心</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Index" asp-action="Index">首頁</a></li>
                    <li class="breadcrumb-item active">會員中心</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<!-- 開始公告頁 -->
<!-- cart + summary -->
<div class="container mt-4 mb-4">

    <!--導覽列:選單-->
    <ul class="nav nav-tabs justify-content-around" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="membership-tab" data-bs-toggle="tab" href="#membership" role="tab"
               aria-controls="home" aria-selected="true">基本資料</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="shoppingsheet-tab" data-bs-toggle="tab" href="#shoppingsheet" role="tab" onclick="loadOrderRecords()"
               aria-selected="false">消費紀錄</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="return-tab" data-bs-toggle="tab" href="#return" role="tab" onclick="loadReturnRecords()"
               aria-selected="false">退貨紀錄</a>
        </li>

        <li class="nav-item" role="presentation">
            <a class="nav-link" id="collect-tab" data-bs-toggle="tab" href="#collect" role="tab" onclick="loadFavoriteData()"
               aria-selected="false">收藏紀錄</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="Complaint-tab" data-bs-toggle="tab" href="#Complaint" role="tab" onclick="loadComplaintRecords()"
               aria-selected="false">客訴紀錄</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="CustomerService-tab" data-bs-toggle="tab" href="#CustomerService" role="tab"
               aria-selected="false">客服中心</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">

        <!--1.會員基本資料的內容-->
        <div class="tab-pane fade show active" id="membership" role="tabpanel" aria-labelledby="membership-tab">
            <section class="my-5">
                <div class="container">
                    <div class="row">
                        <!--基本資料-->
                        <div class="col-lg-9 order-2 order-sm-2 order-md-2 order-xs-2">
                            <div class="card border shadow-0">
                                <div class="m-4">
                                    <div class="row gy-3 mb-4">
                                        <div class="container">
                                            <div class="card-body">
                                                <form id="memberInfoForm" >
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <label class="fs-5">帳號</label>
                                                            <input type="text" placeholder="帳號" id="memberAccountInput" name="MemberAccount"
                                                                   class="form-control" readonly />
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="d-flex justify-content-between">
                                                                <label class="fs-5">密碼</label>
                                                                <div class="text-right">
                                                                    <input type="checkbox" onclick="myFunction()" id="changePassword">顯示密碼
                                                                </div>
                                                            </div>
                                                            <input type="password" placeholder="密碼" id="passwordInput" name="Password" pattern="^(?=.*[a-zA-Z])(?=.*[0-9]).{6,}$"
                                                                   class="form-control" required />
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <label class="fs-5">姓名</label>
                                                            <input type="text" placeholder="姓名" id="nameInput" name="Name"
                                                                   class="form-control" required="required" />
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="fs-5">生日</label>
                                                            <input type="date" class="form-control" id="birthdayInput" name="Birthday" required />
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <label class="fs-5">電子信箱</label>
                                                            <input type="email" class="form-control" id="emailInput" name="Email"
                                                                   placeholder="電子信箱" required />
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label class="fs-5">手機號碼</label>
                                                            <input type="tel" pattern="^\d{10}$" placeholder="手機號碼" id="phoneNumberInput" name="PhoneNumber"
                                                                   class="form-control" required />
                                                        </div>
                                                    </div>
                                                    <!--住址-->
                                                    <div class="form-row my-1">
                                                        <div class="col-md-12">
                                                            <label class="fs-5">住址</label>
                                                            <div class="input-group">
                                                                <input type="text" placeholder="姓名" id="addressInput" name="address"
                                                                       class="form-control" required="required" />
                                                                <div class="input-group-append">
                                                                    <button class="btn  btn-warning mx-2 btn-sm fs-5" type="button" data-bs-toggle="modal" data-bs-target="#mapModal">+</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!--常用宅配地址-->
                                                    <div class="form-row my-1">
                                                        <div class="col-md-12">
                                                            <label class="fs-5">常用宅配地址</label>
                                                            <div class="d-flex align-items-center">
                                                                <select class="form-select" id="commonAddressSelect"
                                                                        aria-label="Default select example">
                                                                    <option selected>常用宅配地址</option>
                                                                </select>
                                                            </div>
                                                            <button type="button" class="btn-sm add-address my-2" id="lookCAButton"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#addressModal">
                                                                查看已儲存宅配地址
                                                            </button>
                                                            <button type="button" class="btn-sm add-address my-2"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#NewAddressModal">
                                                                新增宅配地址
                                                            </button>
                                                        </div>
                                                    </div>
                                                    <!--7-11超商取貨地址-->
                                                    <div class="form-row my-1">
                                                        <div class="col-md-12">
                                                            <label class="fs-5">超商取貨地址</label>
                                                            <div class="d-flex align-items-start">
                                                                <input type="text" placeholder="請填入門市店名" id="storename" name="storename" class="form-control" value="@ViewBag.storename" />
                                                                <div class="col-7">
                                                                    <input type="text" placeholder="請填入門市地址" id="storeaddress" name="storeaddress" class="form-control" value="@ViewBag.storeaddress" />
                                                                </div>
                                                                <button class="btn btn-warning  btn-sm fs-5" type="button" id="SelectShop">+</button>
                                                            </div>
                                                            <button type="button" class="btn-sm add-address my-2"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#MarketaddressModal">
                                                                查看已儲存地址
                                                            </button>
                                                            <button type="submit" class="btn-sm add-address my-2" id="addNewMarket">新增超商門市</button>
                                                        </div>
                                                    </div>
                                                    <button class="btn-customs btn hvr-hovers" id="memberInfoButton" type="submit">送出</button>
                                                    <button class="btn-customs btn hvr-hovers mx-2" id="memberInfoDemo" type="button">Demo填入基本資料</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--彈跳視窗: 查看已儲存超商取貨地址-->
                        <div class="modal fade" id="MarketaddressModal" tabindex="-1" aria-labelledby="addressModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content ">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addressModalLabel">常用地址一覽</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-9">
                                            <ol>
                                                <li>
                                                    <input type="text" value="地址一號"><span class="minus-address">
                                                        <i class="fa-solid fa-circle-minus"></i>
                                                    </span>
                                                </li>
                                            </ol>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">
                                            關閉
                                        </button>
                                        <button type="button" class="btn btn-primary">儲存</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--彈跳視窗: 新增超商取貨地址-->
                        <div class="modal fade" id="NewMarketAddressModal" tabindex="-1"
                             aria-labelledby="NewAddressModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addressModalLabel">新增超商取貨地址</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-9">
                                            <ol>
                                                <li>
                                                    <select class="form-select"
                                                            aria-label="Default select example">
                                                        <option selected></option>
                                                        <option>7-11</option>
                                                        <option value="1">全家</option>
                                                        <option value="2">OK</option>
                                                        <option value="3">萊爾富</option>
                                                    </select>
                                                    <select id="county2Select" class="form-select"
                                                            aria-label="Default select example">
                                                        <option value="">請選擇縣市</option>
                                                    </select>
                                                    <select id="town2Select" class="form-select"
                                                            aria-label="Default select example">
                                                        <option value="">請選擇鄉鎮</option>
                                                    </select>
                                                    <select id="roadSelect" class="form-select"
                                                            aria-label="Default select example">
                                                        <option value="">請選擇街道</option>
                                                    </select>
                                                    <select class="form-select"
                                                            aria-label="Default select example">
                                                        <option selected>松慈店</option>
                                                        <option value="1">民和店</option>
                                                        <option value="2">成都店</option>
                                                        <option value="3">南機場店</option>
                                                    </select>
                                                </li>
                                            </ol>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">
                                            關閉
                                        </button>
                                        <button type="button" class="btn btn-primary">儲存</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- 概括summary -->
                        <div class="col-lg-3 order-1 order-sm-1 order-md-1 order-xs-1">
                            <div class="card mb-3 border shadow-0">
                                <div class="card-body text-center">
                                    <div class="avatar text-center">
                                        <img class="avatar-img mx-auto" id="imagePreview" src='@Url.Content("~/images/toy.png")' alt="" style="width: 200px; height: 200px;">
                                        <button class="btn btn-warning btn-sm mt-2 mb-3" data-bs-toggle="modal" id="renewPersonalPicture"
                                                data-bs-target="#personalPictureModal">
                                            更換個人圖片
                                        </button>
                                        <button class="btn btn-warning btn-sm mt-2 mb-3"  id="imageModeratorButton">
                                            圖片審核
                                        </button>
                                    </div>
                                    <h1 id="summonName" class="font-weight-bold fs-2 my-1">會員</h1>
                                    <div class="d-flex justify-content-center">
                                        <h3 id="coinPointShow" class="fs-5">您目前持有紅利：0點</h3>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <h3 id="moneyPointShow" class="fs-5"></h3>
                                    </div>
                                    <div class="d-flex justify-content-center">
                                        <h3 id="catCoinShow" class="fs-5">持有貓幣：0</h3>
                                    </div>
                                    <div class="text-center ">
                                        <button class="btn-customs btn hvr-hovers " data-bs-toggle="modal" id="searchCoupon"
                                                data-bs-target="#couponModal">
                                            查看持有優惠券
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!--彈跳視窗:查看持有優惠券-->
        <div class="modal fade" id="couponModal">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col">
                                    <nav>
                                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                            <button class="nav-link active" id="nav-list-tab" data-bs-toggle="tab" data-bs-target="#nav-list" type="button" role="tab" aria-controls="nav-list" aria-selected="true">可使用</button>
                                            <button class="nav-link" id="nav-invalid-tab" data-bs-toggle="tab" data-bs-target="#nav-invalid" type="button" role="tab" aria-controls="nav-invalid" aria-selected="false">已失效</button>
                                        </div>
                                    </nav>
                                </div>
                                <div class="col-auto">
                                    <button type="button" class="btn btn-warning btn-sm" data-bs-dismiss="modal">
                                        X
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body">
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-list" role="tabpanel" aria-labelledby="nav-list-tab">
                                <table class="table table-bordered table-hover" id="couponTable">
                                    <thead class="table-warning  text-center">
                                        <tr>
                                            <th style="white-space: nowrap;">優惠名稱</th>
                                            <th style="white-space: nowrap;">適用範圍</th>
                                            <th style="white-space: nowrap;">使用期限</th>
                                            <th style="white-space: nowrap;">剩餘張數</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-left">
                                        <!-- 優惠券清單內容 -->
                                    </tbody>
                                </table>
                            </div>
                            <div class="tab-pane fade" id="nav-invalid" role="tabpanel" aria-labelledby="nav-invalid-tab">
                                <table class="table table-bordered table-hover" id="invalidCouponTable">
                                    <thead class="table-warning  text-center">
                                        <tr>
                                            <th style="white-space: nowrap;">優惠名稱</th>
                                            <th style="white-space: nowrap;">適用範圍</th>
                                            <th style="white-space: nowrap;">張數</th>
                                        </tr>
                                    </thead>
                                    <tbody class="text-left">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>

        <!--彈跳視窗:更換個人照片-->
        <div class="modal fade" id="personalPictureModal">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h3>更換個人照片</h3>
                                </div>
                                <div class="col d-flex justify-content-end">
                                    <button type="button" class="btn btn-warning btn-sm" data-bs-dismiss="modal">
                                        X
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body">
                        <form method="post" enctype="multipart/form-data" action="/ImageTest/UploadImageToMemberInfo">
                            <input type="hidden" name="memberIdForMembership" value="@ViewBag.memberIdForMembership">
                            <input type="text" name="AnnouncementContent" value="personalPicture" style="display: none;" />
                            <input type="file" name="image" id="imageInput" accept="image/*" />
                            <button type="submit">上傳圖片</button>
                        </form>
                    </div>
                    <div class="modal-footer d-flex justify-content-center align-items-center">
                        <div class="avatar text-center">
                            <img id="uploadImagePreview" src='@Url.Content("~/images/toy.png")' alt="" style="max-width: 200px; max-height: 200px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--彈跳視窗: 查看已儲存宅配地址-->
        <div class="modal fade" id="addressModal" tabindex="-1" aria-labelledby="addressModalLabel"
             aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title font-weight-bold" id="addressModalLabel">常用地址一覽</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="col-md-12">
                            <ol>
                                <li>
                                    <input type="text" value="地址一號">
                                    <span class="minus-address">
                                        <i class="fa-solid fa-circle-minus"></i>
                                    </span>
                                </li>
                            </ol>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary"
                                data-bs-dismiss="modal">
                            關閉
                        </button>
                        <!--
                        <button type="button" class="btn btn-primary">儲存</button>
                        -->
                    </div>
                </div>
            </div>
        </div>

        <!--彈跳視窗: 新增宅配地址-->
        <div class="modal fade" id="NewAddressModal" tabindex="-1"
             aria-labelledby="NewAddressModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content ">
                    <form id="newAddressForm">
                        <div class="modal-header">
                            <h5 class="modal-title font-weight-bold" id="addressModalLabel">新增宅配地址</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="col-md-9">
                                <ol>
                                    <li>
                                        <div class="my-2">
                                            <label>收件人</label>
                                            <input type="text" value="" id="fillRecipientNameInput" class="form-control" name="RecipientName" required>
                                        </div>
                                        <div class="my-2">
                                            <label>聯絡電話</label>
                                            <input type="tel" pattern="^\d{10}$" value="" id="fillRecipientPhoneInput" class="form-control" name="RecipientPhone" required>
                                        </div>
                                        <div class="my-2">
                                            <label>收件地址</label>
                                            <input type="text" value="" id="fillAddressInput" class="form-control" name="RecipientAddress" required>
                                        </div>
                                    </li>
                                </ol>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">
                                關閉
                            </button>
                            <button type="submit" class="btn btn-primary" id="commonAddressSaveButton">儲存</button>
                            <button type="button" class="btn btn-primary" id="commonAddressSaveDemo">Demo填入地址</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!--彈跳視窗:查看googlemap-->
        <div class="modal fade" id="mapModal">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
                <div class="modal-content">
                    <div class="modal-header d-flex justify-content-between">
                        <div>
                            <input id="locationInput" type="text" placeholder="輸入地址或地標..." style="width: 300px;" />
                            <button onclick="searchLocation()">搜尋</button>
                        </div>
                        <button type="button" class="btn btn-warning btn-sm" data-bs-dismiss="modal">X</button>
                    </div>
                    <div class="modal-body">
