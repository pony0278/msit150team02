<div class="all-title-box all-title-box-picture">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>會員中心</h2>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">首頁</a></li>
                    <li class="breadcrumb-item active">會員中心</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<!-- 開始公告頁 -->
<!-- cart + summary -->
<div class="container mt-4 mb-4">

    <!--導覽列:選單-->
    <ul class="nav nav-tabs justify-content-around" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="membership-tab" data-bs-toggle="tab" href="#membership" role="tab"
               aria-controls="home" aria-selected="true">基本資料</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="shoppingsheet-tab" data-bs-toggle="tab" href="#shoppingsheet" role="tab"
               aria-selected="false">消費紀錄</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="return-tab" data-bs-toggle="tab" href="#return" role="tab"
               aria-selected="false">退貨紀錄</a>
        </li>

        <li class="nav-item" role="presentation">
            <a class="nav-link" id="collect-tab" data-bs-toggle="tab" href="#collect" role="tab"
               aria-selected="false">收藏紀錄</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="Complaint-tab" data-bs-toggle="tab" href="#Complaint" role="tab"
               aria-selected="false">客訴紀錄</a>
        </li>
        <li class="nav-item" role="presentation">
            <a class="nav-link" id="CustomerService-tab" data-bs-toggle="tab" href="#CustomerService" role="tab"
               aria-selected="false">客服中心</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">

        <!--1.會員基本資料的內容-->
        <div class="tab-pane fade show active" id="membership" role="tabpanel" aria-labelledby="membership-tab">
            <section class="my-5">
                <div class="container">
                    <div class="row">
                        <!-- cart -->
                        <div class="col-lg-9 order-2 order-sm-2 order-md-2 order-xs-2">
                            <div class="card border shadow-0">
                                <div class="m-4">
                                    <div class="row gy-3 mb-4">
                                        <div class="container">
                                            <div class="card-body">
                                                <form id="memberInfoForm" >
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <label>帳號</label>
                                                            <input type="text" placeholder="帳號" id="memberAccountInput" name="MemberAccount"
                                                                   class="form-control" readonly />
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label>密碼</label>
                                                            <input type="password" placeholder="密碼" id="passwordInput" name="Password" pattern="^(?=.*[a-zA-Z])(?=.*[0-9]).{6,}$"
                                                                   class="form-control" required />
                                                            <div class="text-right">
                                                                <input type="checkbox" onclick="myFunction()" id="changePassword">顯示密碼
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <label>姓名</label>
                                                            <input type="text" placeholder="姓名" id="nameInput" name="Name"
                                                                   class="form-control" required="required" />
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label>生日</label>
                                                            <input type="date" class="form-control" id="birthdayInput" name="Birthday" required />
                                                        </div>
                                                    </div>
                                                    <div class="form-row">
                                                        <div class="col-md-6">
                                                            <label>電子信箱</label>
                                                            <input type="email" class="form-control" id="emailInput" name="Email"
                                                                   placeholder="電子信箱" required />
                                                        </div>
                                                        <div class="col-md-6">
                                                            <label>手機號碼</label>
                                                            <input type="tel" pattern="^\d{10}$" placeholder="手機號碼" id="phoneNumberInput" name="PhoneNumber"
                                                                   class="form-control" required />
                                                        </div>
                                                    </div>
                                                    <!--常用地址-->
                                                    <div class="form-row">
                                                        <div class="col-md-12">
                                                            <label>常用宅配地址</label>
                                                            <div class="d-flex align-items-center">
                                                                <select class="form-select" id="commonAddressSelect"
                                                                        aria-label="Default select example">
                                                                    <option selected>常用地址</option>
                                                                </select>
                                                            </div>
                                                            <button type="button" class="btn add-address" id="lookCAButton"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#addressModal">
                                                                查看已儲存地址
                                                            </button>
                                                            <button type="button" class="btn add-address"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#NewAddressModal">
                                                                新增地址
                                                            </button>
                                                        </div>
                                                    </div>

                                                    <!--7-11超商取貨地址-->
                                                    <div class="form-row">
                                                        <div class="col-md-12">
                                                            <label>超商取貨地址</label>
                                                            <div class="d-flex align-items-center">
                                                                <select class="form-select"
                                                                        aria-label="Default select example">
                                                                    <option selected>取貨地址1號</option>
                                                                    <option value="1">取貨地址2號</option>
                                                                    <option value="2">取貨地址3號</option>
                                                                    <option value="3">取貨地址4號</option>
                                                                </select>
                                                            </div>
                                                            <button type="button" class="btn add-address"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#MarketaddressModal">
                                                                查看已儲存地址
                                                            </button>
                                                            <button type="button" class="btn add-address"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#NewMarketAddressModal">
                                                                新增超商取貨地址
                                                            </button>
                                                        </div>
                                                    </div>
                                                    <button class="btn-customs btn hvr-hovers " id="memberInfoButton" type="submit">
                                                        送出
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--彈跳視窗: 查看已儲存地址-->
                        <div class="modal fade" id="addressModal" tabindex="-1" aria-labelledby="addressModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addressModalLabel">常用地址一覽</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-9">
                                            <ol>
                                                <li>
                                                    <input type="text" value="地址一號">
                                                    <span class="minus-address">
                                                        <i class="fa-solid fa-circle-minus"></i>
                                                    </span>
                                                </li>
                                            </ol>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">
                                            關閉
                                        </button>
                                        <!--
                                        <button type="button" class="btn btn-primary">儲存</button>
                                        -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--彈跳視窗: 新增地址-->
                        <div class="modal fade" id="NewAddressModal" tabindex="-1"
                             aria-labelledby="NewAddressModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content ">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addressModalLabel">新增地址</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-9">
                                            <ol>
                                                <li>
                                                    <input type="text" value="" placeholder="填入地址" id="fillAddressInput" class="form-control">
                                                </li>
                                            </ol>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">
                                            關閉
                                        </button>
                                        <button type="button" class="btn btn-primary" id="commonAddressSaveButton">儲存</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--彈跳視窗: 查看已儲存超商取貨地址-->
                        <div class="modal fade" id="MarketaddressModal" tabindex="-1" aria-labelledby="addressModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content ">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addressModalLabel">常用地址一覽</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-9">
                                            <ol>
                                                <li>
                                                    <input type="text" value="地址一號"><span class="minus-address">
                                                        <i class="fa-solid fa-circle-minus"></i>
                                                    </span>
                                                </li>
                                            </ol>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">
                                            關閉
                                        </button>
                                        <button type="button" class="btn btn-primary">儲存</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--彈跳視窗: 新增超商取貨地址-->
                        <div class="modal fade" id="NewMarketAddressModal" tabindex="-1"
                             aria-labelledby="NewAddressModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addressModalLabel">新增超商取貨地址</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-md-9">
                                            <ol>
                                                <li>
                                                    <select class="form-select"
                                                            aria-label="Default select example">
                                                        <option selected>7-11</option>
                                                        <option value="1">全家</option>
                                                        <option value="2">OK</option>
                                                        <option value="3">萊爾富</option>
                                                    </select>
                                                    <select id="county2Select" class="form-select"
                                                            aria-label="Default select example">
                                                        <option value="">請選擇縣市</option>
                                                    </select>
                                                    <select id="town2Select" class="form-select"
                                                            aria-label="Default select example">
                                                        <option value="">請選擇鄉鎮</option>
                                                    </select>
                                                    <select id="roadSelect" class="form-select"
                                                            aria-label="Default select example">
                                                        <option value="">請選擇街道</option>
                                                    </select>
                                                    <select class="form-select"
                                                            aria-label="Default select example">
                                                        <option selected>松慈店</option>
                                                        <option value="1">民和店</option>
                                                        <option value="2">成都店</option>
                                                        <option value="3">南機場店</option>
                                                    </select>
                                                </li>
                                            </ol>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">
                                            關閉
                                        </button>
                                        <button type="button" class="btn btn-primary">儲存</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- cart -->
                        <!-- 概括summary -->
                        <div class="col-lg-3 order-1 order-sm-1 order-md-1 order-xs-1">
                            <div class="card mb-3 border shadow-0">
                                <div class="card-body text-center">
                                    <div class="avatar text-center">
                                        <img class="avatar-img mx-auto" id="imagePreview" src='@Url.Content("~/images/toy.png")' alt="" style="width: 200px; height: 200px;">
                                        <button class="btn btn-warning btn-sm mt-2 mb-3" data-bs-toggle="modal" id="renewPersonalPicture"
                                                data-bs-target="#personalPictureModal">
                                            更換個人圖片
                                        </button>
                                    </div>
                                    <h1 id="summonName">會員</h1>

                                    <div class="d-flex justify-content-center">
                                        <span id="coinPointShow">您目前持有點數：0點/0元</span>
                                    </div>
                                    <div class="text-center ">
                                        <button class="btn-customs btn hvr-hovers " data-bs-toggle="modal" id="searchCoupon"
                                                data-bs-target="#couponModal">
                                            查看持有優惠券
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- summary -->
                    </div>
                </div>
            </section>
        </div>

        <!--彈跳視窗:查看持有優惠券-->
        <div class="modal fade" id="couponModal">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h3>我的優惠券</h3>
                                </div>
                                <div class="col d-flex justify-content-end">
                                    <button type="button" class="btn btn-warning btn-sm" data-bs-dismiss="modal">
                                        X
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body">
                        <table class="table table-bordered table-hover" id="couponTable">
                            <thead class="table-warning  text-center">
                                <tr>
                                    <th style="white-space: nowrap;">優惠名稱</th>
                                    <th style="white-space: nowrap;">適用範圍</th>
                                    <th style="white-space: nowrap;">使用期限</th>
                                </tr>
                            </thead>
                            <tbody class="text-left">
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                    </div>
                </div>
            </div>
        </div>

        <!--彈跳視窗:更換個人照片-->
        <div class="modal fade" id="personalPictureModal">
            <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col">
                                    <h3>更換個人照片</h3>
                                </div>
                                <div class="col d-flex justify-content-end">
                                    <button type="button" class="btn btn-warning btn-sm" data-bs-dismiss="modal">
                                        X
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body">
                        <form method="post" enctype="multipart/form-data" action="/ImageTest/UploadImageToMemberInfo">
                            <input type="text" name="AnnouncementContent" value="personalPicture" style="display: none;" />
                            <input type="file" name="image" id="imageInput" accept="image/*" />
                            <button type="submit">上傳圖片</button>
                        </form>
                    </div>
                    <div class="modal-footer d-flex justify-content-center align-items-center">
                        <div class="avatar text-center">
                            <img id="uploadImagePreview" src='@Url.Content("~/images/toy.png")' alt="" style="max-width: 200px; max-height: 200px;">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--2.消費紀錄的內容-->
        <div class="tab-pane fade" id="shoppingsheet" role="tabpanel" aria-labelledby="shoppingsheet-tab">
            <section class="my-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-12 order-3 order-sm-3 order-md-3 order-xs-3">
                            <div class="row gy-3 mb-4">
                                <div style="height: 350px; overflow: auto;" class="table-responsive">
                                    <table border="0" cellspacing="5" cellpadding="5">
                                        <tbody>
                                            <tr>
                                                <td>查詢起日:</td>
                                                <td><input type="text" id="orderMin" name="orderMin"></td>
                                                <td>查詢迄日:</td>
                                                <td><input type="text" id="orderMax" name="orderMax"></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                    <table class="table  table-bordered table-hover" id="orderTable">
                                        <thead class="table-warning text-center">
                                            <tr>
                                                <th scope="col">訂單編號</th>
                                                <th scope="col">訂單成立日期</th>
                                                <th scope="col">收件人</th>
                                                <th scope="col">收件地址</th>
                                                <th scope="col">收件電話</th>
                                                <th scope="col">付款方式</th>
                                                <th scope="col">訂單狀態</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-left">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!--彈跳視窗:訂單明細-->
        <div class="modal fade" id="orderDetailModal">
            <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="col d-flex justify-content-end">
                            <button type="button" class="btn btn-warning btn-sm px-2" data-bs-dismiss="modal">
                                X
                            </button>
                        </div>
                        <div class="row my-1 ml-2">
                            <label>消費總額: <span id="consumptionAmount"></span></label>
                        </div>
                        <div class="container">
                            <table class="table  table-bordered table-hover" id="orderDetailTable">
