                // 檢查表單的驗證狀態
                if (form.checkValidity()) {
                    const formData = new FormData(form);

                    fetch('@Url.Content("/Membership/UpdateMemberInfo")', {
                        body: formData,
                        method: 'POST'
                    })
                        .then(response => {
                            if (response.ok) {
                                $('#summonName').text(`會員：${$('#nameInput').val()}`);
                                return response.text();
                            } else {
                                throw new Error('連線有誤，請向客服人員聯繫');
                            }
                        })
                        .then(data => {
                            Swal.fire({
                                icon: 'success',
                                title: '修改成功',
                            });
                        })
                        .catch(error => {
                            Swal.fire({
                                icon: 'error',
                                title: '錯誤',
                                text: error.message
                            });
                        });
                } else {
