                    tbody.innerHTML = '';

                    // 遍歷 JSON 資料並建立表格列
                    data.forEach(function (item) {
                        var row = tbody.insertRow();
                        row.insertCell().textContent = item.couponName;
                        row.insertCell().textContent = item.couponContent;

                        //將日期格式化為 "yyyy-mm-dd"
                        var formattedDate = new Date(item.expiryDate).toLocaleDateString();
                        var dateCell = row.insertCell();
                        dateCell.textContent = formattedDate;
